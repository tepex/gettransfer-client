<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.CreateTransferFragment">


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/flFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/clHeaderLogo"
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:background="@color/colorBGSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/line6"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/colorSeparator"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_goneMarginLeft="16dp"
            app:layout_goneMarginStart="16dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:gravity="bottom"
            android:text="Schedule transfer"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorTextGray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvFromAToB"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="bottom"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="From A to B"
            android:textColor="@color/colorTextBlack"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvForAWhile"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvForAWhile"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="bottom"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="32dp"
            android:text="For a while"
            android:textColor="@color/colorTextGray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/clHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorBG"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clHeaderLogo">

        <View
            android:id="@+id/line1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:background="@color/colorSeparator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lvFrom"
            app:layout_goneMarginLeft="16dp"
            app:layout_goneMarginStart="16dp" />

        <ImageView
            android:id="@+id/vSwapBG"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/bg_circle_bg_32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/flSwapBG"
            app:layout_constraintStart_toStartOf="@+id/flSwapBG"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvlFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="13dp"
            android:labelFor="@+id/lvFrom"
            android:text="From"
            android:textColor="@color/colorTextGray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivFrom2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvlFrom"
            app:layout_constraintStart_toEndOf="@+id/tvlFrom"
            app:layout_constraintTop_toTopOf="@+id/tvlFrom"
            app:srcCompat="@drawable/ic_arrow_black_16dp" />

        <com.kg.gettransfer.views.LocationView
            android:id="@+id/lvFrom"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Pick up"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="Starting point"
            android:inputType="textPersonName"
            android:paddingLeft="16dp"
            android:paddingTop="24dp"
            android:textColor="?attr/editTextColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivTo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvlTo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvlTo"
            app:srcCompat="@drawable/ic_arrow_blue_16dp" />

        <TextView
            android:id="@+id/tvlTo"
            android:layout_width="45dp"
            android:layout_height="18dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="13dp"
            android:labelFor="@+id/lvTo"
            android:text="To"
            android:textColor="@color/colorTextGray"
            app:layout_constraintStart_toEndOf="@+id/ivTo2"
            app:layout_constraintTop_toBottomOf="@+id/lvFrom" />

        <com.kg.gettransfer.views.LocationView
            android:id="@+id/lvTo"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:background="?attr/selectableItemBackground"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="Destination"
            android:inputType="textPersonName"
            android:paddingLeft="16dp"
            android:paddingTop="24dp"
            android:textColor="?attr/editTextColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line1" />

        <FrameLayout
            android:id="@+id/flSwapBG"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="64dp"
            android:background="@drawable/bg_circle_transparent_32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/ivSwap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_swap_vert_gray_20dp" />

        </FrameLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/clDuration"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:background="@color/colorBG"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line1">

            <ImageView
                android:id="@+id/ivDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/tvlDuration"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvlDuration"
                app:srcCompat="@drawable/ic_timer_blue_16dp" />

            <TextView
                android:id="@+id/tvlDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="13dp"
                android:text="@string/duration"
                android:textColor="@color/colorTextGray"
                app:layout_constraintStart_toEndOf="@id/ivDuration"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/fieldDuration"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="Time you'll need a car"
                android:paddingLeft="16dp"
                android:paddingRight="8dp"
                android:paddingTop="24dp"
                android:textColor="?attr/colorAccent"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnDurationInc"
                android:layout_width="64dp"
                android:layout_height="0dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingRight="8dp"
                android:paddingTop="24dp"
                android:text="+"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#9e9e9e"
                app:layout_constraintBottom_toBottomOf="@+id/btnDurationDec"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/btnDurationDec" />

            <Button
                android:id="@+id/btnDurationDec"
                android:layout_width="64dp"
                android:layout_height="0dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingStart="8dp"
                android:paddingTop="24dp"
                android:text="−"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#9e9e9e"
                app:layout_constraintBottom_toBottomOf="@+id/fieldDuration"
                app:layout_constraintEnd_toStartOf="@+id/btnDurationInc"
                app:layout_constraintTop_toTopOf="@+id/fieldDuration" />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorBG"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clHeader" />

    <View
        android:id="@+id/line7"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorSeparator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clHeader" />

    <Button
        android:id="@+id/btnPromo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:layout_marginStart="16dp"
        android:text="Domodedovo - Moscow"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/flFragmentTransferDetails"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabConfirmStep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:focusable="false"
        android:visibility="invisible"
        app:backgroundTint="@color/colorYellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_trending_flat_black_24dp" />


</android.support.constraint.ConstraintLayout>
