<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBG">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_back_gray_24dp" />

        <TextView
            android:id="@+id/tvFromDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="@color/colorTextBlack"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/btnBack"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvToDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="@color/colorTextAccent"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/btnBack"
            app:layout_constraintTop_toBottomOf="@+id/tvFromDetails" />

        <View
            android:id="@+id/line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/colorSeparator"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorBG"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clHeader">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <!--Pick up-->


            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/colorBGSecondary"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingTop="24dp"
                android:text="Pick up"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="When"
                android:textColor="@color/colorTextGray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <com.kg.gettransfer.views.DateField
                android:id="@+id/etDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="?attr/editTextBackground"
                android:editable="false"
                android:ems="10"
                android:hint="Date"
                android:inputType="none"
                android:paddingLeft="8dp"
                android:paddingRight="16dp"
                android:textAppearance="@android:style/TextAppearance.Material.Small.Inverse"
                android:textColor="?attr/editTextColor"
                android:textCursorDrawable="@null"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView"
                app:layout_constraintEnd_toStartOf="@+id/etTime"
                app:layout_constraintStart_toEndOf="@+id/textView" />

            <com.kg.gettransfer.views.TimeField
                android:id="@+id/etTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="8dp"
                android:background="?attr/editTextBackground"
                android:editable="false"
                android:ems="10"
                android:hint="Time"
                android:inputType="none"
                android:paddingLeft="8dp"
                android:paddingRight="16dp"
                android:textAppearance="@android:style/TextAppearance.Material.Small.Inverse"
                android:textColor="?attr/editTextColor"
                android:textCursorDrawable="@null"
                app:layout_constraintBaseline_toBaselineOf="@+id/etDate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/etDate" />


            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="Passengers"
                android:textColor="@color/colorTextGray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <EditText
                android:id="@+id/etPassengers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="8dp"
                android:hint="Adults and children"
                android:inputType="number"
                android:paddingLeft="8dp"
                android:selectAllOnFocus="true"
                android:textAppearance="@android:style/TextAppearance.Material.Small.Inverse"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView6" />

            <Button
                android:id="@+id/btnPassengersDec"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingStart="8dp"
                android:text="âˆ’"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#9e9e9e"
                app:layout_constraintBottom_toBottomOf="@+id/etPassengers"
                app:layout_constraintEnd_toStartOf="@+id/btnPassengersInc"
                app:layout_constraintTop_toTopOf="@+id/etPassengers" />

            <Button
                android:id="@+id/btnPassengersInc"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingRight="8dp"
                android:text="+"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#9e9e9e"
                app:layout_constraintBottom_toBottomOf="@+id/btnPassengersDec"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/btnPassengersDec" />


            <TextView
                android:id="@+id/textView63"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="Transport"
                android:textColor="@color/colorTextGray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <com.kg.gettransfer.views.TypeField
                android:id="@+id/tfTransport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="8dp"
                android:clipToPadding="false"
                android:editable="false"
                android:hint="Class, type"
                android:paddingEnd="16dp"
                android:paddingStart="8dp"
                android:textAppearance="@android:style/TextAppearance.Material.Small.Inverse"
                android:textCursorDrawable="@null"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView63"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView63" />


            <!--Personal comfort-->


            <TextView
                android:id="@+id/textView18"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/colorBGSecondary"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingTop="24dp"
                android:text="Personal comfort"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tfTransport" />


            <TextView
                android:id="@+id/textView210"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="Name sign"
                android:textColor="@color/colorTextGray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView18" />

            <EditText
                android:id="@+id/etSign"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="8dp"
                android:ems="10"
                android:hint="Mr John Brown"
                android:inputType="textEmailAddress"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textAppearance="@android:style/TextAppearance.Material.Small.Inverse"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView210"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView210" />


            <TextView
                android:id="@+id/textView39"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="Offer your price"
                android:textColor="@color/colorTextGray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView210" />

            <com.kg.gettransfer.views.PriceField
                android:id="@+id/etPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="8dp"
                android:ems="10"
                android:hint="$500"
                android:inputType="text"
                android:paddingLeft="8dp"
                android:paddingRight="16dp"
                android:textAppearance="@android:style/TextAppearance.Material.Small.Inverse"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView39"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView39" />


            <TextView
                android:id="@+id/textView49"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="Flight or train"
                android:textColor="@color/colorTextGray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView39" />

            <com.kg.gettransfer.views.FlightField
                android:id="@+id/etFlightTrainNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="8dp"
                android:ems="10"
                android:hint="Flight or train number"
                android:inputType="text"
                android:paddingLeft="8dp"
                android:paddingRight="16dp"
                android:textAppearance="@android:style/TextAppearance.Material.Small.Inverse"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView49"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView49" />


            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="Comments"
                android:textColor="@color/colorTextGray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView49" />

            <EditText
                android:id="@+id/etComments"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="8dp"
                android:ems="10"
                android:hint="Children, snowboards, ski bags, surfboards"
                android:inputType="text"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textAppearance="@android:style/TextAppearance.Material.Small.Inverse"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView29"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView29" />


            <!--Contact with-->


            <TextView
                android:id="@+id/textView8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/colorBGSecondary"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingTop="24dp"
                android:text="Contact with"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etComments" />


            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="Email"
                android:textColor="@color/colorTextGray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="8dp"
                android:ems="10"
                android:hint="email@box.com"
                android:inputType="textEmailAddress"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="d.vakulenko@key-g.com"
                android:textAppearance="@android:style/TextAppearance.Material.Small.Inverse"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView10" />


            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="Phone"
                android:textColor="@color/colorTextGray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="8dp"
                android:ems="10"
                android:hint="+7 905 333 22 22"
                android:inputType="phone"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textAppearance="@android:style/TextAppearance.Material.Small.Inverse"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView9" />


            <!--Promo-->


            <TextView
                android:id="@+id/textView832"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/colorBGSecondary"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingTop="24dp"
                android:text="Have a promo code?"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etPhone" />

            <Button
                android:id="@+id/btnHavePromoCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:minHeight="16dp"
                android:text="Yes"
                android:textAllCaps="false"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView832"
                app:layout_constraintEnd_toEndOf="@+id/textView832" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/clPromoCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView832">

                <TextView
                    android:id="@+id/tvPromoCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:text="Promo code"
                    android:textColor="@color/colorTextGray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/etPromoCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:hint="CODE"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text=""
                    android:textAppearance="@android:style/TextAppearance.Material.Small.Inverse"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tvPromoCode"
                    app:layout_constraintEnd_toStartOf="@+id/tvPromoInfo"
                    app:layout_constraintStart_toEndOf="@+id/tvPromoCode"
                    app:layout_goneMarginEnd="16dp" />

                <TextView
                    android:id="@+id/tvPromoInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/bg_rounded_2_blue"
                    android:textColor="@color/colorBG"
                    android:visibility="gone"
                    app:layout_constraintBaseline_toBaselineOf="@+id/etPromoCode"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ProgressBar
                    android:id="@+id/pbPromoValidation"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="32dp"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="@+id/etPromoCode"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/etPromoCode" />

                <TextView
                    android:id="@+id/tvPromoValidation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:paddingBottom="16dp"
                    android:text=""
                    android:textColor="@color/colorTextError"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvPromoCode" />

            </android.support.constraint.ConstraintLayout>

            <!--Error-->


            <TextView
                android:id="@+id/tvError"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/colorBGSecondary"
                android:gravity="start"
                android:paddingBottom="40dp"
                android:paddingLeft="16dp"
                android:paddingRight="80dp"
                android:paddingTop="40dp"
                android:text=" "
                android:textColor="@color/colorTextError"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clPromoCode" />


        </android.support.constraint.ConstraintLayout>

    </ScrollView>


    <!---->


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:focusable="false"
        android:visibility="invisible"
        app:backgroundTint="@color/colorYellow"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_check_black_24dp" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:focusable="false"
        android:visibility="invisible"
        app:backgroundTint="@color/colorYellow"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:elevation="16dp"
        android:indeterminateTint="@color/colorTextBlack"
        android:padding="6dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/fabProgress"
        app:layout_constraintLeft_toLeftOf="@id/fabProgress"
        app:layout_constraintRight_toRightOf="@id/fabProgress"
        app:layout_constraintTop_toTopOf="@id/fabProgress" />


</android.support.constraint.ConstraintLayout>