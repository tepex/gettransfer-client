<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back_rounded"
    android:orientation="vertical"
    android:paddingStart="@dimen/cancelation_request_dialog_horizontal_padding"
    android:paddingTop="@dimen/cancelation_request_dialog_vertical_padding"
    android:paddingEnd="@dimen/cancelation_request_dialog_horizontal_padding"
    android:paddingBottom="@dimen/cancelation_request_dialog_vertical_padding">

    <TextView
        android:id="@+id/title"
        style="@style/sf_font_pro_text_semibold_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/cancelation_request_dialog_text_size"
        tools:text="Согласны ли вы отменить заявку по причине “Изменились требования”?" />

    <TextView
        android:id="@+id/subtitle"
        style="@style/sf_font_pro_text_regular_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/LNG_OFFERS_FOR_REQUEST_WILL_BE_LOST"
        android:textSize="@dimen/cancelation_request_dialog_text_size" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBack"
        style="@style/LargeRoundedButtonOutlined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/cancelation_request_dialog_button_back_margin_top"
        android:text="@string/LNG_BACKTRIP" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancelRequest"
        style="@style/LargeRoundedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/LNG_CANCEL"
        app:backgroundTint="@color/color_gtr_red" />
</LinearLayout>