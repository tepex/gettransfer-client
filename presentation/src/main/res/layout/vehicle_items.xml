<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgFreeWater"
        android:layout_width="@dimen/vehicle_items_water_width"
        android:layout_height="@dimen/vehicle_items_height"
        android:layout_marginEnd="@dimen/vehicle_items_margin_end"
        android:visibility="gone"
        tools:visibility="visible"
        app:srcCompat="@drawable/ic_free_water" />

    <ImageView
        android:id="@+id/imgFreeWiFi"
        android:layout_width="@dimen/vehicle_items_wifi_width"
        android:layout_height="@dimen/vehicle_items_height"
        android:layout_marginEnd="@dimen/vehicle_items_margin_end"
        android:visibility="gone"
        tools:visibility="visible"
        app:srcCompat="@drawable/ic_wifi" />

    <ImageView
        android:id="@+id/imgCharge"
        android:layout_width="@dimen/vehicle_items_charge_width"
        android:layout_height="@dimen/vehicle_items_height"
        android:layout_marginEnd="@dimen/vehicle_items_margin_end"
        android:visibility="gone"
        tools:visibility="visible"
        app:srcCompat="@drawable/ic_charge" />

    <ImageView
        android:id="@+id/imgGreen"
        android:layout_width="@dimen/vehicle_items_green_width"
        android:layout_height="@dimen/vehicle_items_height"
        android:visibility="gone"
        tools:visibility="visible"
        app:srcCompat="@drawable/ic_leaf" />

</LinearLayout>