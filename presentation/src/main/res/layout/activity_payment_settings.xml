<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBack">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_carrier_transfer_details_header_text_field_height"
        android:text="@string/LNG_PAYMENT_TERMS"
        android:textAllCaps="true"
        android:textColor="@color/colorTextLightGray"
        android:textSize="@dimen/activity_carrier_transfer_details_header_text_size"
        android:fontFamily="@font/sf_pro_text_bold"
        android:gravity="center_vertical"
        android:background="@color/colorBack"
        android:paddingStart="@dimen/activity_carrier_transfer_details_header_text_padding_start_end"
        android:paddingEnd="@dimen/activity_carrier_transfer_details_header_text_padding_start_end"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/payFullPriceButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/create_transfer_additionals_view_height"
        android:paddingTop="@dimen/create_transfer_additionals_top_and_bottom_padding"
        android:background="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        android:visibility="gone">

        <TextView
            android:id="@+id/payFullPriceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/sf_pro_text_regular"
            android:textColor="@color/colorTextBlack"
            android:textSize="@dimen/create_transfer_additionals_top_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fullPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/sf_pro_text_regular"
            android:text="@string/LNG_RIDE_PASSENGERS"
            android:textColor="@color/colorTextLightGray"
            android:textSize="@dimen/create_transfer_additionals_bottom_text_size"
            app:layout_constraintStart_toStartOf="@+id/payFullPriceTitle"
            app:layout_constraintTop_toBottomOf="@+id/payFullPriceTitle"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/fullPriceCheckIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:srcCompat="@drawable/ic_check_blue_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/create_transfer_divider_height"
            android:background="@color/colorDividerGray"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/payThirdOfPriceButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/create_transfer_additionals_view_height"
        android:paddingBottom="@dimen/create_transfer_additionals_top_and_bottom_padding"
        android:paddingTop="@dimen/create_transfer_additionals_top_and_bottom_padding"
        android:background="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        android:visibility="gone">

        <TextView
            android:id="@+id/payThirdOfPriceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/sf_pro_text_regular"
            android:textColor="@color/colorTextBlack"
            android:textSize="@dimen/create_transfer_additionals_top_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/thirdOfPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_text_regular"
            android:text="@string/LNG_RIDE_PASSENGER"
            android:textColor="@color/colorTextLightGray"
            android:textSize="@dimen/create_transfer_additionals_bottom_text_size"
            app:layout_constraintStart_toStartOf="@+id/payThirdOfPriceTitle"
            app:layout_constraintTop_toBottomOf="@+id/payThirdOfPriceTitle" />

        <ImageView
            android:id="@+id/thirdOfPriceCheckIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/ic_check_blue_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"/>


    </android.support.constraint.ConstraintLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_carrier_transfer_details_header_text_field_height"
        android:text="@string/LNG_PAYMENT_METHOD"
        android:textAllCaps="true"
        android:textColor="@color/colorTextLightGray"
        android:textSize="@dimen/activity_carrier_transfer_details_header_text_size"
        android:fontFamily="@font/sf_pro_text_bold"
        android:gravity="center_vertical"
        android:background="@color/colorBack"
        android:paddingStart="@dimen/activity_carrier_transfer_details_header_text_padding_start_end"
        android:paddingEnd="@dimen/activity_carrier_transfer_details_header_text_padding_start_end"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/creditCardButton"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingBottom="@dimen/create_transfer_additionals_top_and_bottom_padding"
        android:paddingTop="@dimen/create_transfer_additionals_top_and_bottom_padding"
        android:background="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2">

        <TextView
            android:id="@+id/creditCardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/sf_pro_text_regular"
            android:textColor="@color/colorTextBlack"
            android:textSize="@dimen/create_transfer_additionals_top_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/LNG_PAYMENT_METHOD_CARD" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="13dp"
            app:srcCompat="@drawable/ic_check_blue_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/create_transfer_divider_height"
        android:background="@color/colorDividerGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/payPalButton"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingBottom="@dimen/create_transfer_additionals_top_and_bottom_padding"
        android:paddingTop="@dimen/create_transfer_additionals_top_and_bottom_padding"
        android:background="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2">

        <TextView
            android:id="@+id/payPalTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/sf_pro_text_regular"
            android:textColor="@color/colorTextBlack"
            android:textSize="@dimen/create_transfer_additionals_top_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/LNG_PAYMENT_METHOD_PAYPAL" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="13dp"
            android:textSize="@dimen/create_transfer_additionals_top_text_size"
            android:text="@string/LNG_SOON"/>

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/commission"
        android:layout_marginTop="16dp"
        android:paddingStart="@dimen/activity_carrier_transfer_details_header_text_padding_start_end"
        android:paddingEnd="@dimen/activity_carrier_transfer_details_header_text_padding_start_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/sf_pro_text_semibold"
        android:textColor="@android:color/black"
        tools:text="Commission 3%.\n Refund is available before 17 Oct 2018 at 15:30:00"/>

    <Button
        android:id="@+id/btnGetPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_get_transfer"
        android:fontFamily="@font/sf_pro_text_regular"
        android:text="@string/LNG_PAYMENT_PAY"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/create_transfer_additionals_top_text_size"/>

    <TextView
        android:id="@+id/tv_payment_agreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:text="@string/LNG_RIDE_PAYMENT_OFFERT"
        android:gravity="center_horizontal"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="72dp"/>

</LinearLayout>