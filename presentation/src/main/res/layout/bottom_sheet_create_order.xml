<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_hideable="false"
    app:behavior_peekHeight="250dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:background="@color/colorWhite">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvDateTimeTransfer"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginStart="16dp"
                android:text="@string/transfer_date_and_time"
                app:layout_constraintBottom_toBottomOf="@+id/ivTranferDate"
                app:layout_constraintStart_toEndOf="@+id/ivTranferDate"
                app:layout_constraintTop_toTopOf="@+id/ivTranferDate" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvTransferType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tvRate"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/average_rate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rvTransferType" />

            <TextView
                android:id="@+id/tvCurrencyType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/rub"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view13" />

            <ImageView
                android:id="@+id/ivChangeCurrency"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="3dp"
                app:layout_constraintStart_toEndOf="@+id/tvCurrencyType"
                app:layout_constraintTop_toTopOf="@+id/tvCurrencyType"
                app:srcCompat="@drawable/ic_triangle" />

            <EditText
                android:id="@+id/etYourPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="@null"
                android:hint="@string/suggest_your_price"
                app:layout_constraintBottom_toBottomOf="@+id/tvCurrencyType"
                app:layout_constraintStart_toEndOf="@+id/ivChangeCurrency"
                app:layout_constraintTop_toTopOf="@+id/tvCurrencyType" />

            <View
                android:id="@+id/view9"
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_transfer_divider_height"
                android:layout_marginTop="16dp"
                android:background="@color/colorDividerGray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etYourPrice" />

            <View
                android:id="@+id/view13"
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_transfer_divider_height"
                android:background="@color/colorDividerGray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvRate"
                tools:layout_editor_absoluteY="139dp" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_transfer_divider_height"
                android:layout_marginTop="16dp"
                android:background="@color/colorDividerGray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDateTimeTransfer" />

            <View
                android:id="@+id/view8"
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_transfer_divider_height"
                android:layout_marginTop="1dp"
                android:background="@color/colorDividerGray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

            <View
                android:id="@+id/view11"
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_transfer_divider_height"
                android:layout_marginTop="1dp"
                android:background="@color/colorDividerGray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

            <ImageView
                android:id="@+id/ivTranferDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view9"
                app:srcCompat="@drawable/ic_calendar_triangle" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_transfer_additionals_view_height"
                android:paddingBottom="@dimen/create_transfer_additionals_top_and_bottom_padding"
                android:paddingTop="@dimen/create_transfer_additionals_top_and_bottom_padding"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view2">

                <TextView
                    android:id="@+id/tvCountPerson"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/create_transfer_additionals_end_margin"
                    android:layout_marginStart="@dimen/create_transfer_additionals_start_margin"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="@dimen/create_transfer_additionals_top_text_size"
                    app:layout_constraintEnd_toEndOf="@+id/ivPersonsCounterDown"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:text="@string/passengers"
                    android:textColor="@color/colorTextLightGray"
                    android:textSize="@dimen/create_transfer_additionals_bottom_text_size"
                    app:layout_constraintEnd_toEndOf="@+id/tvCountPerson"
                    app:layout_constraintStart_toStartOf="@+id/tvCountPerson"
                    app:layout_constraintTop_toBottomOf="@+id/tvCountPerson" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tvCountPerson"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_passenger" />

                <ImageView
                    android:id="@+id/ivPersonsCounterDown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/ivPersonsCounterUp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_circle_minus" />

                <ImageView
                    android:id="@+id/ivPersonsCounterUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_circle_plus" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_transfer_additionals_view_height"
                android:paddingBottom="@dimen/create_transfer_additionals_top_and_bottom_padding"
                android:paddingTop="@dimen/create_transfer_additionals_top_and_bottom_padding"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

                <EditText
                    android:id="@+id/tvName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/create_transfer_additionals_end_margin"
                    android:layout_marginStart="@dimen/create_transfer_additionals_start_margin"
                    android:background="@null"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:imeOptions="actionDone"
                    android:inputType="textCapWords"
                    android:textColor="@color/colorTextBlack"
                    android:hint="@string/your_name"
                    android:textSize="@dimen/create_transfer_additionals_top_text_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/create_transfer_additionals_end_margin"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:text="@string/driver_will_meet_you"
                    android:textColor="@color/colorTextLightGray"
                    android:textSize="@dimen/create_transfer_additionals_bottom_text_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tvName"
                    app:layout_constraintTop_toBottomOf="@+id/tvName" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tvName"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_passport" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraintLayout3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_transfer_additionals_view_height"
                android:layout_marginTop="1dp"
                android:paddingBottom="@dimen/create_transfer_additionals_top_and_bottom_padding"
                android:paddingTop="@dimen/create_transfer_additionals_top_and_bottom_padding"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/create_transfer_additionals_end_margin"
                    android:layout_marginStart="@dimen/create_transfer_additionals_start_margin"
                    android:background="@null"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:imeOptions="actionDone"
                    android:inputType="textEmailAddress"
                    android:hint="@string/enter_email"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="@dimen/create_transfer_additionals_top_text_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/create_transfer_additionals_end_margin"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:text="@string/email_"
                    android:textColor="@color/colorTextLightGray"
                    android:textSize="@dimen/create_transfer_additionals_bottom_text_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/etEmail"
                    app:layout_constraintTop_toBottomOf="@+id/etEmail" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/etEmail"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_email" />

            </android.support.constraint.ConstraintLayout>

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_transfer_divider_height"
                android:background="@color/colorDividerGray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout3" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraintLayout4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_transfer_additionals_view_height"
                android:paddingBottom="@dimen/create_transfer_additionals_top_and_bottom_padding"
                android:paddingTop="@dimen/create_transfer_additionals_top_and_bottom_padding"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

                <EditText
                    android:id="@+id/tvPhone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/create_transfer_additionals_end_margin"
                    android:layout_marginStart="@dimen/create_transfer_additionals_start_margin"
                    android:background="@null"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:imeOptions="actionDone"
                    android:inputType="phone"
                    android:hint="@string/enter_phone_number"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="@dimen/create_transfer_additionals_top_text_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/create_transfer_additionals_end_margin"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:text="@string/phone_"
                    android:textColor="@color/colorTextLightGray"
                    android:textSize="@dimen/create_transfer_additionals_bottom_text_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tvPhone"
                    app:layout_constraintTop_toBottomOf="@+id/tvPhone" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tvPhone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_phone" />

            </android.support.constraint.ConstraintLayout>

            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_transfer_divider_height"
                android:layout_marginTop="1dp"
                android:background="@color/colorDividerGray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout4" />


            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraintLayout5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_transfer_additionals_view_height"
                android:layout_marginTop="1dp"
                android:paddingBottom="@dimen/create_transfer_additionals_top_and_bottom_padding"
                android:paddingTop="@dimen/create_transfer_additionals_top_and_bottom_padding"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout4">

                <EditText
                    android:id="@+id/tvFlightOrTrainNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/create_transfer_additionals_end_margin"
                    android:layout_marginStart="@dimen/create_transfer_additionals_start_margin"
                    android:background="@null"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:hint="@string/example_flight"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="@dimen/create_transfer_additionals_top_text_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/create_transfer_additionals_end_margin"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:text="@string/flight_or_train_number"
                    android:textColor="@color/colorTextLightGray"
                    android:textSize="@dimen/create_transfer_additionals_bottom_text_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tvFlightOrTrainNumber"
                    app:layout_constraintTop_toBottomOf="@+id/tvFlightOrTrainNumber" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tvFlightOrTrainNumber"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_flight" />

            </android.support.constraint.ConstraintLayout>

            <View
                android:id="@+id/view6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_transfer_divider_height"
                android:layout_marginTop="1dp"
                android:background="@color/colorDividerGray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout5" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraintLayout6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_transfer_additionals_view_height"
                android:layout_marginTop="1dp"
                android:paddingBottom="@dimen/create_transfer_additionals_top_and_bottom_padding"
                android:paddingTop="@dimen/create_transfer_additionals_top_and_bottom_padding"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout5">

                <TextView
                    android:id="@+id/tvCountChild"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/create_transfer_additionals_end_margin"
                    android:layout_marginStart="@dimen/create_transfer_additionals_start_margin"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:text="0"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="@dimen/create_transfer_additionals_top_text_size"
                    app:layout_constraintEnd_toEndOf="@+id/ivChildCounterDown"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:text="@string/child_seats"
                    android:textColor="@color/colorTextLightGray"
                    android:textSize="@dimen/create_transfer_additionals_bottom_text_size"
                    app:layout_constraintEnd_toEndOf="@+id/tvCountChild"
                    app:layout_constraintStart_toStartOf="@+id/tvCountChild"
                    app:layout_constraintTop_toBottomOf="@+id/tvCountChild" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tvCountChild"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_child_seat" />

                <ImageView
                    android:id="@+id/ivChildCounterDown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/ivChildCounterUp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_circle_minus" />

                <ImageView
                    android:id="@+id/ivChildCounterUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_circle_plus" />

            </android.support.constraint.ConstraintLayout>

            <View
                android:id="@+id/view7"
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_transfer_divider_height"
                android:layout_marginTop="1dp"
                android:background="@color/colorDividerGray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout6" />

            <View
                android:id="@+id/view12"
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_transfer_divider_height"
                android:background="@color/colorDividerGray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvComments" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_transfer_divider_height"
                android:layout_marginTop="8dp"
                android:background="@color/colorDividerGray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutAgreement" />

            <TextView
                android:id="@+id/tvComments"
                android:layout_width="0dp"
                android:layout_height="@dimen/create_transfer_additionals_view_height"
                android:layout_marginTop="1dp"
                android:drawablePadding="15dp"
                android:drawableStart="@drawable/ic_comment"
                android:hint="@string/type_your_comments"
                android:padding="8dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout6" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/layoutAgreement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvComments">

                <LinearLayout
                    android:id="@+id/layoutCBAgreement"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tvAgreement1"
                    app:layout_constraintBottom_toBottomOf="@+id/tvAgreement2"
                    android:layout_marginStart="@dimen/create_transfer_cb_agreement_margin"
                    android:layout_marginEnd="@dimen/create_transfer_cb_agreement_margin"
                    android:layout_marginBottom="@dimen/create_transfer_cb_agreement_margin"
                    android:gravity="center_horizontal">

                    <CheckBox
                        android:id="@+id/cbAgreement"
                        android:layout_width="@dimen/create_transfer_cb_size"
                        android:layout_height="@dimen/create_transfer_cb_size"
                        android:background="@drawable/cb_agreement_selector"
                        android:button="@null"
                        android:layout_marginTop="@dimen/create_transfer_cb_agreement_margin"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tvAgreement1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextLightGray"
                    android:textSize="@dimen/create_transfer_agreement_text_size"
                    android:text="@string/i_read_and_agree"
                    android:fontFamily="@font/sf_pro_text_regular"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="@dimen/create_transfer_agreement_text_margin_start"
