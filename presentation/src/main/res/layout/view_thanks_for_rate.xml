<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/back_top_rounded"
    android:padding="@dimen/rate_container_dialog_padding"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:text="@string/LNG_CLOSE"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="28dp"
        android:background="@drawable/back_circle_thanks_rate"
        android:src="@drawable/ic_thanks_for_rate"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:textColor="@color/colorTextBlack"
        android:fontFamily="@font/sf_pro_text_semibold"
        android:textSize="17sp"
        android:text="@string/LNG_PAYMENT_THANK_RATING"/>
    
    <TextView
        android:id="@+id/yv_comment_suggestion_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingStart="56dp"
        android:paddingEnd="56dp"
        android:textColor="@color/colorTextBlack"
        android:fontFamily="@font/sf_pro_text_semibold"
        android:textSize="17sp"
        android:gravity="center"
        android:text="@string/LNG_PAYMENT_LEAVE_COMMENT"/>

    <EditText
        android:id="@+id/et_thanks_comment"

        android:maxLines="1"
        android:ellipsize="end"
        android:hint="@string/LNG_RIDE_YOUR_COMMENT"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/color_gtr_light_grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/transfer_details_secondary_text"/>

</LinearLayout>