<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/root"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingStart="@dimen/read_more_padding_horizontal"
	android:paddingEnd="@dimen/read_more_padding_horizontal"
	android:paddingBottom="@dimen/read_more_close_margin">

	<TextView
		android:id="@+id/tv_read_more_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:padding="8dp"
		android:layout_marginTop="16dp"
		style="@style/black_semiBold"
		android:textSize="17sp"
		android:text="@string/LNG_BESTPRICE_TITLE"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		tools:text="We return difference of a price"/>

	<TextView android:id="@+id/content1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" 
		android:layout_marginTop="@dimen/read_more_content_margin"
		android:textSize="@dimen/read_more_tiny_text_size"
		android:text="@string/LNG_BESTPRICE_TEXT1"
		android:textColor="@android:color/black"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/tv_read_more_title" />
	<TextView android:id="@+id/content2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" 
		android:layout_marginTop="@dimen/read_more_content_margin"
		android:text="@string/LNG_BESTPRICE_TEXT2"
		android:textColor="@android:color/black"
		android:textSize="@dimen/read_more_tiny_text_size"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/content1" />
	<LinearLayout android:id="@+id/content3"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/read_more_content_margin"
		android:padding="@dimen/read_more_content3_padding"
		android:background="@color/colorPrimary"
		android:orientation="vertical"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/content2">
		<TextView style="@style/read_more_title"
			android:layout_marginBottom="@dimen/read_more_content3_padding"
			android:textSize="@dimen/read_more_title_size"
			android:text="@string/LNG_BESTPRICE_YELLOW_TITLE" />
		<TextView style="@style/read_more_item"
			android:textSize="@dimen/read_more_tiny_text_size"
			android:text="@string/LNG_BESTPRICE_YELLOW_TEXT1" />
		<TextView style="@style/read_more_item"
			android:textSize="@dimen/read_more_tiny_text_size"
			android:text="@string/LNG_BESTPRICE_YELLOW_TEXT2" />
		<TextView style="@style/read_more_item"
			android:textSize="@dimen/read_more_tiny_text_size"
			android:text="@string/LNG_BESTPRICE_YELLOW_TEXT3" />
		<TextView style="@style/read_more_item"
			android:textSize="@dimen/read_more_tiny_text_size"
			android:text="@string/LNG_BESTPRICE_YELLOW_TEXT4" />
		<TextView style="@style/read_more_item"
			android:textSize="@dimen/read_more_tiny_text_size"
			android:text="@string/LNG_BESTPRICE_YELLOW_TEXT5" />
	</LinearLayout>

	<Button
		android:id="@+id/btnClose"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/read_more_close_margin"
		android:background="?android:attr/selectableItemBackground"
		android:text="@string/LNG_CLOSE"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/content3" />
</androidx.constraintlayout.widget.ConstraintLayout>
