<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <HorizontalScrollView
        android:id="@+id/sv_photos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bottom_sheet_offer_details_margin_16dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/photos_container_bs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal"
            android:paddingStart="@dimen/bottom_sheet_offer_details_margin_16dp"
            android:paddingEnd="@dimen/bottom_sheet_offer_details_margin_16dp" />
    </HorizontalScrollView>

    <ImageView
        android:id="@+id/iv_single_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/bottom_sheet_offer_details_margin_16dp"
        android:layout_marginTop="@dimen/bottom_sheet_offer_details_margin_16dp"
        android:layout_marginEnd="@dimen/bottom_sheet_offer_details_margin_16dp"
        android:adjustViewBounds="true"
        android:maxHeight="@dimen/bottom_sheet_offer_details_sv_photo_height"
        android:scaleType="centerCrop"
        android:visibility="gone" />

</LinearLayout>