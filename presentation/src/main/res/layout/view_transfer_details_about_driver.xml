<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
        android:id="@+id/view_driver_languages"
        layout="@layout/view_transfer_details_driver_languages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.kg.gettransfer.presentation.ui.custom.TransferDetailsCarrierInfoField
        android:id="@+id/driver_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:carrier_field_title="@string/LNG_DRIVER_EMAIL"
        tools:carrier_field_text="driver@gmail.com"
        tools:visibility="visible"/>

    <com.kg.gettransfer.presentation.ui.custom.TransferDetailsCarrierInfoField
        android:id="@+id/driver_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:carrier_field_title="@string/LNG_DRIVER_PHONE"
        tools:carrier_field_text="+7 900 123 56 78"
        tools:visibility="visible"/>

    <com.kg.gettransfer.presentation.ui.custom.TransferDetailsCarrierInfoField
        android:id="@+id/carrier_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:carrier_field_title="@string/LNG_CARRIER"
        tools:carrier_field_text="Antarctica Travel"
        tools:visibility="visible"/>

    <com.kg.gettransfer.presentation.ui.custom.TransferDetailsCarrierInfoField
        android:id="@+id/carrier_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:carrier_field_title="@string/LNG_CARRIER_EMAIL"
        tools:carrier_field_text="carriere@gmail.com"
        tools:visibility="visible"/>

    <com.kg.gettransfer.presentation.ui.custom.TransferDetailsCarrierInfoField
        android:id="@+id/carrier_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:carrier_field_title="@string/LNG_CARRIER_PHONE"
        tools:carrier_field_text="+7 900 123 56 78"
        tools:visibility="visible"/>

</LinearLayout>