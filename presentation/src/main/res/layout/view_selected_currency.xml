<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_text_regular"
        android:text="@string/rub"
        android:clickable="false"
        android:textColor="@color/colorTextBlackBold"
        android:textSize="@dimen/currency_symbol_size" />

    <ImageView
        android:clickable="false"
        android:layout_width="@dimen/triangle_currency_width"
        android:layout_height="@dimen/triangle_currency_height"
        android:layout_marginTop="@dimen/triangle_currency_margin_top"
        android:layout_marginStart="@dimen/triangle_currency_margin_start"
        app:srcCompat="@drawable/ic_triangle" />

</LinearLayout>