<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".presentation.ui.StartFragment">
	
	<com.google.android.gms.maps.MapView android:id="@+id/mapView"
		android:layout_width="match_parent"
		android:layout_height="match_parent" />
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal|top"
		android:layout_marginTop="@dimen/search_form_margin_top"
		android:layout_marginStart="@dimen/search_form_margin_X"
		android:layout_marginEnd="@dimen/search_form_margin_X"
		android:orientation="vertical"
		android:background="@android:color/white" >
		<EditText android:id="@+id/fromEt"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" 
			android:background="@null"
			android:hint="@string/search_from_hint" />
		<EditText android:id="@+id/toEt"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@null"
			android:hint="@string/search_to_hint" />
	</LinearLayout>

</FrameLayout>
