<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back_top_rounded"
    android:clickable="true"
    app:behavior_hideable="true"
    app:behavior_skipCollapsed="true"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/bottom_sheet_offer_details_top_view_width"
        android:layout_height="@dimen/bottom_sheet_offer_details_top_view_height"
        android:layout_marginTop="@dimen/bottom_sheet_offer_details_top_view_margin_top"
        android:background="@drawable/rectangle_swipe_down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/carrierId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/bottom_sheet_offer_details_elements_margin_start"
        android:layout_marginTop="@dimen/bottom_sheet_offer_details_carrier_id_margin_top"
        android:fontFamily="@font/sf_pro_text_bold"
        android:text="Carrier #4242"
        android:textColor="@color/colorTextBlack"
        android:textSize="@dimen/bottom_sheet_offer_details_text_size_17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <LinearLayout
        android:id="@+id/layoutCarrierLanguages"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/bottom_sheet_offer_details_layout_languages_height"
        android:layout_marginEnd="@dimen/bottom_sheet_offer_details_layout_languages_margin_start"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/carrierId"
        app:layout_constraintTop_toTopOf="@+id/carrierId"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_transfer_info_divider_height"
        android:background="@color/colorDivider"
        app:layout_constraintTop_toBottomOf="@+id/carrierId"
        android:layout_marginTop="@dimen/bottom_sheet_offer_details_dimen1_margin_top"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layoutAllRatings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/bottom_sheet_offer_details_elements_padding_start_end"
        android:paddingEnd="@dimen/bottom_sheet_offer_details_elements_padding_start_end"
        app:layout_constraintTop_toBottomOf="@+id/divider1">
        
        <android.support.constraint.ConstraintLayout
            android:id="@+id/layoutRatingAverage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_sheet_offer_details_layouts_height">

            <TextView
                android:id="@+id/ratingAverage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_text_bold"
                android:text="@string/LNG_FILTER_RATING"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/bottom_sheet_offer_details_text_size_17sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.willy.ratingbar.ScaleRatingBar
                android:id="@+id/ratingBarAverage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/ratingAverage"
                app:layout_constraintBottom_toBottomOf="@+id/ratingAverage"
                app:layout_constraintEnd_toStartOf="@+id/ivRatingBarAverage"
                android:layout_marginEnd="@dimen/bottom_sheet_offer_details_iv_like_margin_start"
                app:srb_clickable="false"
                app:srb_drawableEmpty="@drawable/ic_star_empty"
                app:srb_drawableFilled="@drawable/ic_star_filled"
                app:srb_isIndicator="true"
                app:srb_minimumStars="@integer/stars_minimum"
                app:srb_numStars="@integer/stars_number"
                app:srb_rating="2"
                app:srb_starHeight="@dimen/rating_bar_stars_height_width"
                app:srb_starPadding="@dimen/rating_bar_stars_padding"
                app:srb_starWidth="@dimen/rating_bar_stars_height_width"
                app:srb_stepSize="0.1" />



            <ImageView
                android:id="@+id/ivRatingBarAverage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/ratingAverage"
                app:layout_constraintBottom_toBottomOf="@+id/ratingAverage"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_chevron_down"/>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layoutSomeRatings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/bottom_sheet_offer_details_layouts_ratings_padding_bottom"
            app:layout_constraintTop_toBottomOf="@+id/layoutRatingAverage">

            <TextView
                android:id="@+id/tvTopSelection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/LNG_TOP_RATED"
                android:fontFamily="@font/sf_pro_text_regular"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/bottom_sheet_offer_details_text_size_17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivLikeDriver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintBottom_toBottomOf="@+id/tvTopSelection"
                app:layout_constraintTop_toTopOf="@+id/tvTopSelection"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_like_button" />



            <TextView
                android:id="@+id/ratingDriver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bottom_sheet_offer_details_ratings_texts_margin_top"
                android:fontFamily="@font/sf_pro_text_regular"
                android:text="@string/LNG_DRIVER"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/bottom_sheet_offer_details_text_size_17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTopSelection" />

            <com.willy.ratingbar.ScaleRatingBar
                android:id="@+id/ratingBarDriver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/ratingDriver"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ratingDriver"
                app:srb_clickable="false"
                app:srb_drawableEmpty="@drawable/ic_star_empty"
                app:srb_drawableFilled="@drawable/ic_star_filled"
                app:srb_isIndicator="true"
                app:srb_minimumStars="@integer/stars_minimum"
                app:srb_numStars="@integer/stars_number"
                app:srb_rating="2"
                app:srb_starHeight="@dimen/rating_bar_stars_height_width"
                app:srb_starPadding="@dimen/rating_bar_stars_padding"
                app:srb_starWidth="@dimen/rating_bar_stars_height_width"
                app:srb_stepSize="0.1" />

            <TextView
                android:id="@+id/ratingPunctuality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bottom_sheet_offer_details_ratings_texts_margin_top"
                android:fontFamily="@font/sf_pro_text_regular"
                android:text="@string/LNG_PUNCTUALITY"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/bottom_sheet_offer_details_text_size_17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ratingDriver" />

            <com.willy.ratingbar.ScaleRatingBar
                android:id="@+id/ratingBarPunctuality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/bottom_sheet_offer_details_rating_bar_punctuality_margin_start"
                app:layout_constraintBottom_toBottomOf="@+id/ratingPunctuality"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ratingPunctuality"
                app:srb_clickable="false"
                app:srb_drawableEmpty="@drawable/ic_star_empty"
                app:srb_drawableFilled="@drawable/ic_star_filled"
                app:srb_isIndicator="true"
                app:srb_minimumStars="@integer/stars_minimum"
                app:srb_numStars="@integer/stars_number"
                app:srb_rating="2"
                app:srb_starHeight="@dimen/rating_bar_stars_height_width"
                app:srb_starPadding="@dimen/rating_bar_stars_padding"
                app:srb_starWidth="@dimen/rating_bar_stars_height_width"
                app:srb_stepSize="0.1" />

            <TextView
                android:id="@+id/ratingVehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bottom_sheet_offer_details_ratings_texts_margin_top"
                android:fontFamily="@font/sf_pro_text_regular"
                android:text="@string/LNG_VEHICLE"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/bottom_sheet_offer_details_text_size_17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ratingPunctuality" />

            <com.willy.ratingbar.ScaleRatingBar
                android:id="@+id/ratingBarVehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/ratingVehicle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ratingVehicle"
                app:srb_clickable="false"
                app:srb_drawableEmpty="@drawable/ic_star_empty"
                app:srb_drawableFilled="@drawable/ic_star_filled"
                app:srb_isIndicator="true"
                app:srb_minimumStars="@integer/stars_minimum"
                app:srb_numStars="@integer/stars_number"
                app:srb_rating="2"
                app:srb_starHeight="@dimen/rating_bar_stars_height_width"
                app:srb_starPadding="@dimen/rating_bar_stars_padding"
                app:srb_starWidth="@dimen/rating_bar_stars_height_width"
                app:srb_stepSize="0.1" />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_transfer_info_divider_height"
        android:background="@color/colorDivider"
        app:layout_constraintTop_toBottomOf="@+id/layoutAllRatings"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layoutVehicleName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_sheet_offer_details_layouts_height"
        android:paddingStart="@dimen/bottom_sheet_offer_details_elements_padding_start_end"
        android:paddingEnd="@dimen/bottom_sheet_offer_details_elements_padding_start_end"
        app:layout_constraintTop_toBottomOf="@+id/divider2">

        <TextView
            android:id="@+id/vehicleName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_text_bold"
            android:text="Mercedes-Benz S-Class, 2013"
            android:textColor="@color/colorTextBlack"
            android:textSize="@dimen/bottom_sheet_offer_details_text_size_17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/colorVehicle"/>

        <ImageView
            android:id="@+id/colorVehicle"
            android:layout_width="@dimen/bottom_sheet_offer_details_car_color_indicator_size"
            android:layout_height="@dimen/bottom_sheet_offer_details_car_color_indicator_size"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_circle_car_color_indicator"
            android:background="@drawable/border_car_color_indicator"/>

    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_transfer_info_divider_height"
        android:background="@color/colorDivider"
        app:layout_constraintTop_toBottomOf="@+id/layoutVehicleName"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layoutVehicleInfo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_sheet_offer_details_layouts_height"
        android:paddingStart="@dimen/bottom_sheet_offer_details_elements_padding_start_end"
        android:paddingEnd="@dimen/bottom_sheet_offer_details_elements_padding_start_end"
        app:layout_constraintTop_toBottomOf="@+id/divider3">

        <TextView
            android:id="@+id/vehicleType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_text_regular"
            android:text="Business:"
            android:textColor="@color/colorTextBlack"
            android:textSize="@dimen/bottom_sheet_offer_details_text_size_17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_passenger"/>

            <TextView
                android:id="@+id/tvCountPersons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_text_regular"
                android:gravity="center"
                android:text="x 3"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/bottom_sheet_offer_details_text_size_17sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/bottom_sheet_offer_details_iv_baggage_margin_start"
                app:srcCompat="@drawable/ic_baggage"/>

            <TextView
                android:id="@+id/tvCountBaggage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/bottom_sheet_offer_details_tv_count_baggage_margin_start"
                android:fontFamily="@font/sf_pro_text_regular"
                android:gravity="center"
                android:text="x 3"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/bottom_sheet_offer_details_text_size_17sp"/>

            <ImageView
                android:id="@+id/imgFreeWiFi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/bottom_sheet_offer_details_options_img_margin_start"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_wifi"/>

            <ImageView
                android:id="@+id/imgFreeWater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/bottom_sheet_offer_details_options_img_margin_start"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_free_water"/>

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_transfer_info_divider_height"
        android:background="@color/colorDivider"
        app:layout_constraintTop_toBottomOf="@+id/layoutVehicleInfo"/>

    <LinearLayout
        android:id="@+id/layoutPhotos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/layoutVehicleInfo">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v4.view.ViewPager
                android:id="@+id/vpVehiclePhotos"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottom_sheet_offer_details_view_pager_height"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageButton
                android:id="@+id/previousImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/bottom_sheet_offer_details_chevron_margin"
                app:srcCompat="@drawable/ic_chevron_left"/>

            <ImageButton
                android:id="@+id/nextImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/bottom_sheet_offer_details_chevron_margin"
                android:src="@drawable/ic_chevron_right"/>

            <TextView
                android:id="@+id/numberOfPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_text_regular"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="@dimen/bottom_sheet_offer_details_text_number_of_photo_margin_start"
                android:layout_marginBottom="@dimen/bottom_sheet_offer_details_text_number_of_photo_margin_bottom"
                android:text="1/7"/>

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutPrices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start"
        app:layout_constraintTop_toTopOf="@+id/btnBook"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnBook"
        app:layout_constraintBottom_toBottomOf="@+id/btnBook">

        <LinearLayout
            android:id="@+id/layoutOfferPriceWithoutDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/offerPriceWithoutDiscountDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextPriceWithoutDiscount"
                android:textSize="@dimen/bottom_sheet_offer_details_text_size_12sp"
                android:fontFamily="@font/sf_pro_text_bold"
                android:text="€199,00"/>

            <TextView
                android:id="@+id/offerPriceWithoutDiscountPreferred"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextPriceWithoutDiscount"
                android:textSize="@dimen/bottom_sheet_offer_details_text_size_12sp"
                android:fontFamily="@font/sf_pro_text_regular"
                android:text="($222,00)"
                android:layout_marginStart="@dimen/bottom_sheet_offer_details_prices_margin"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/offerPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_text_bold"
                android:textSize="@dimen/bottom_sheet_offer_details_text_size_14sp"
                android:textColor="@color/colorTextBlack"
                android:text="€199,00"/>

            <TextView
                android:id="@+id/offerPricePreferred"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_text_regular"
                android:textSize="@dimen/bottom_sheet_offer_details_text_size_14sp"
                android:textColor="@color/colorTextBlack"
                android:text="($222,00)"
                android:visibility="gone"
                android:layout_marginStart="@dimen/bottom_sheet_offer_details_prices_margin"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnBook"
        android:layout_width="@dimen/bottom_sheet_offer_details_btn_book_width"
        android:layout_height="@dimen/bottom_sheet_offer_details_btn_book_height"
        android:background="@drawable/btn_get_transfer"
        android:text="Book"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/bottom_sheet_offer_details_text_size_13sp"
        android:fontFamily="@font/sf_pro_text_regular"
        app:layout_constraintTop_toBottomOf="@+id/layoutPhotos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/layoutPrices"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/bottom_sheet_offer_details_btn_book_and_view_pager_margin_top"
        android:layout_marginBottom="@dimen/bottom_sheet_offer_details_btn_book_margin_bottom"/>

</android.support.constraint.ConstraintLayout>
