<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">


    <ImageView
            android:id="@+id/imgPassengers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_passenger_without_padding"/>

    <TextView
            android:id="@+id/tv_countPassengers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/view_transfer_details_transport_type_item_texts_margin_start"
            android:textSize="@dimen/activity_transfer_details_text_size_17sp"
            android:textColor="@color/colorTextBlack"
            android:fontFamily="@font/sf_pro_text_regular"

            tools:text=" X 3"/>

    <ImageView
            android:id="@+id/imgChildSeats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_transfer_details_margin_start_end_16dp"
            app:srcCompat="@drawable/ic_child_seat"

            android:visibility="gone"
            tools:visibility="visible"/>

    <TextView
            android:id="@+id/tvCountChildren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/view_transfer_details_transport_type_item_texts_margin_start"
            android:textSize="@dimen/activity_transfer_details_text_size_17sp"
            android:textColor="@color/colorTextBlack"
            android:fontFamily="@font/sf_pro_text_regular"
            android:visibility="gone"

            tools:text=" X 3"
            tools:visibility="visible"/>

</LinearLayout>