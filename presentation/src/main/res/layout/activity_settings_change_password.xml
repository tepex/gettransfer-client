<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gtr_super_light_grey"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:fitsSystemWindows="true">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?android:attr/actionBarSize"/>
        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/change_pass_fields_layout_vertical_padding"
            android:paddingEnd="@dimen/change_pass_fields_layout_vertical_padding"
            android:orientation="vertical"
            android:background="@color/colorWhite">

            <com.kg.gettransfer.presentation.ui.custom.InputPasswordView
                android:id="@+id/newPasswordLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/change_pass_fields_padding_top"
                app:password_view_hint="@string/LNG_NEW_PASSWORD"/>

            <com.kg.gettransfer.presentation.ui.custom.InputPasswordView
                android:id="@+id/repeatNewPasswordLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/change_pass_fields_padding_top"
                app:password_view_hint="@string/LNG_NEW_PASSWORD_CONFIRM" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnSave"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="@dimen/general_button_height"
        android:layout_marginStart="@dimen/change_pass_btn_done_margins"
        android:layout_marginEnd="@dimen/change_pass_btn_done_margins"
        android:layout_marginBottom="@dimen/change_pass_btn_done_margins"
        app:layout_constraintBottom_toBottomOf="parent"
        android:enabled="false"
        android:background="@drawable/btn_bg_rounded"
        android:text="@string/LNG_DONE"
        android:textColor="@color/colorWhite"/>

</android.support.constraint.ConstraintLayout>