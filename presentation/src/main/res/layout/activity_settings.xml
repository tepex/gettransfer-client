<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_root_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBack">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layoutSettingsCurrency"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_activity_height_layouts"
            android:layout_marginTop="@dimen/settings_activity_top_margin_layouts"
            android:background="@drawable/back_clicked_layouts">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/LNG_CURRENCY"
                android:textSize="@dimen/settings_activity_text_size"
                android:fontFamily="@font/sf_pro_text_regular"
                android:textColor="@color/colorTextBlack"
                android:layout_marginStart="@dimen/settings_activity_text_margin_start"
                android:layout_toStartOf="@+id/tvSelectedCurrency"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tvSelectedCurrency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/imgSettingsCurrency"
                android:textSize="@dimen/settings_activity_text_size"
                android:textColor="@color/colorTextLightGray"
                android:fontFamily="@font/sf_pro_text_regular"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/settings_activity_image_margin_start"/>
            
            <ImageView
                android:id="@+id/imgSettingsCurrency"
                android:layout_width="@dimen/settings_activity_image_size"
                android:layout_height="@dimen/settings_activity_image_size"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/settings_activity_image_margin_end"
                android:layout_marginStart="@dimen/settings_activity_image_margin_start"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_down"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/create_transfer_divider_height"
            android:background="@color/colorDividerGray" />

        <RelativeLayout
            android:id="@+id/layoutSettingsLanguage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_activity_height_layouts"
            android:layout_marginTop="@dimen/settings_activity_top_margin_layouts"
            android:background="@drawable/back_clicked_layouts">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/LNG_LANGUAGE"
                android:textSize="@dimen/settings_activity_text_size"
                android:fontFamily="@font/sf_pro_text_regular"
                android:textColor="@color/colorTextBlack"
                android:layout_marginStart="@dimen/settings_activity_text_margin_start"
                android:layout_toStartOf="@+id/tvSelectedLanguage"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tvSelectedLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/imgSettingsLanguage"
                android:textSize="@dimen/settings_activity_text_size"
                android:textColor="@color/colorTextLightGray"
                android:fontFamily="@font/sf_pro_text_regular"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/settings_activity_image_margin_start"/>

            <ImageView
                android:id="@+id/imgSettingsLanguage"
                android:layout_width="@dimen/settings_activity_image_size"
                android:layout_height="@dimen/settings_activity_image_size"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/settings_activity_image_margin_end"
                android:layout_marginStart="@dimen/settings_activity_image_margin_start"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_down"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/create_transfer_divider_height"
            android:background="@color/colorDividerGray" />

        <RelativeLayout
            android:id="@+id/layoutSettingsDistanceUnits"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_activity_height_layouts"
            android:layout_marginTop="@dimen/settings_activity_top_margin_layouts"
            android:background="@drawable/back_clicked_layouts">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/LNG_DISTANCE_UNIT"
                android:textSize="@dimen/settings_activity_text_size"
                android:fontFamily="@font/sf_pro_text_regular"
                android:textColor="@color/colorTextBlack"
                android:layout_marginStart="@dimen/settings_activity_text_margin_start"
                android:layout_toStartOf="@+id/tvSelectedDistanceUnits"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tvSelectedDistanceUnits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/imgSettingsDistanceUnits"
                android:textSize="@dimen/settings_activity_text_size"
                android:textColor="@color/colorTextLightGray"
                android:fontFamily="@font/sf_pro_text_regular"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/settings_activity_image_margin_start"/>

            <ImageView
                android:id="@+id/imgSettingsDistanceUnits"
                android:layout_width="@dimen/settings_activity_image_size"
                android:layout_height="@dimen/settings_activity_image_size"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/settings_activity_image_margin_end"
                android:layout_marginStart="@dimen/settings_activity_image_margin_start"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_down"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/create_transfer_divider_height"
            android:background="@color/colorDividerGray" />

        <Button
            android:id="@+id/btnSignOut"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_activity_height_layouts"
            android:background="@drawable/btn_sign_out"
            android:layout_marginTop="@dimen/settings_activity_top_margin_layouts"
            android:layout_marginStart="@dimen/settings_activity_button_sign_out_start_end_margins"
            android:layout_marginEnd="@dimen/settings_activity_button_sign_out_start_end_margins"
            android:visibility="gone"
            android:text="@string/LNG_UNLOGIN"
            android:textAllCaps="true"
            android:textSize="@dimen/settings_activity_text_size"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/sf_pro_text_regular"
            android:stateListAnimator="@null"/>

        <RelativeLayout
            android:id="@+id/layoutSettingsEndpoint"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_activity_height_layouts"
            android:layout_marginTop="@dimen/settings_activity_top_margin_layouts"
            android:background="@drawable/back_clicked_layouts">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/endpoint"
                android:textSize="@dimen/settings_activity_text_size"
                android:fontFamily="@font/sf_pro_text_regular"
                android:textColor="@color/colorTextBlack"
                android:layout_marginStart="@dimen/settings_activity_text_margin_start"
                android:layout_toStartOf="@+id/tvSelectedEndpoint"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tvSelectedEndpoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/imgSettingsEndpoint"
                android:textSize="@dimen/settings_activity_text_size"
                android:textColor="@color/colorTextLightGray"
                android:fontFamily="@font/sf_pro_text_regular"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/settings_activity_image_margin_start"/>

            <ImageView
                android:id="@+id/imgSettingsEndpoint"
                android:layout_width="@dimen/settings_activity_image_size"
                android:layout_height="@dimen/settings_activity_image_size"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/settings_activity_image_margin_end"
                android:layout_marginStart="@dimen/settings_activity_image_margin_start"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_down"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/create_transfer_divider_height"
            android:background="@color/colorDividerGray" />

        <RelativeLayout
            android:id="@+id/layoutSettingsLogs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_activity_height_layouts"
            android:background="@drawable/back_clicked_layouts">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/logs"
                android:textSize="@dimen/settings_activity_text_size"
                android:fontFamily="@font/sf_pro_text_regular"
                android:textColor="@color/colorTextBlack"
                android:layout_marginStart="@dimen/settings_activity_text_margin_start"
                android:layout_toStartOf="@+id/imgSettingsLogs"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/imgSettingsLogs"
                android:layout_width="@dimen/settings_activity_image_size"
                android:layout_height="@dimen/settings_activity_image_size"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/settings_activity_image_margin_end"
                android:layout_marginStart="@dimen/settings_activity_image_margin_start"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_down"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/create_transfer_divider_height"
            android:background="@color/colorDividerGray" />

        <RelativeLayout
            android:id="@+id/layoutSettingsResetOnboarding"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_activity_height_layouts"
            android:background="@drawable/back_clicked_layouts">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reset_onboarding"
                android:textSize="@dimen/settings_activity_text_size"
                android:fontFamily="@font/sf_pro_text_regular"
                android:textColor="@color/colorTextBlack"
                android:layout_marginStart="@dimen/settings_activity_text_margin_start"
                android:layout_toStartOf="@+id/imgSettingsResetOnboarding"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/imgSettingsResetOnboarding"
                android:layout_width="@dimen/settings_activity_image_size"
                android:layout_height="@dimen/settings_activity_image_size"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/settings_activity_image_margin_end"
                android:layout_marginStart="@dimen/settings_activity_image_margin_start"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/chevron"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/create_transfer_divider_height"
            android:background="@color/colorDividerGray" />

        <RelativeLayout
            android:id="@+id/rlResetMarketRate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_activity_height_layouts"
            android:background="@drawable/back_clicked_layouts">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reset_rate"
                android:textSize="@dimen/settings_activity_text_size"
                android:fontFamily="@font/sf_pro_text_regular"
                android:textColor="@color/colorTextBlack"
                android:layout_marginStart="@dimen/settings_activity_text_margin_start"
                android:layout_toStartOf="@+id/imgSettingsResetRate"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/imgSettingsResetRate"
                android:layout_width="@dimen/settings_activity_image_size"
                android:layout_height="@dimen/settings_activity_image_size"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/settings_activity_image_margin_end"
                android:layout_marginStart="@dimen/settings_activity_image_margin_start"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/chevron"/>

        </RelativeLayout>

    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/btnSupport"
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_activity_height_layouts"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/settings_activity_button_support_start_end_margins"
        android:layout_marginEnd="@dimen/settings_activity_button_support_start_end_margins"
        android:layout_marginBottom="@dimen/settings_activity_button_support_bottom_margin"
        android:background="@drawable/bg_yellow_button_customer_support"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/settings_activity_ic_support_end_margin"
            app:srcCompat="@drawable/ic_support"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/LNG_CUSTOMER_SUPPORT"
            android:textColor="@android:color/black"
            android:textSize="@dimen/settings_activity_text_size"
            android:fontFamily="@font/sf_pro_text_regular"
            android:textAllCaps="true"/>
    </LinearLayout>


</RelativeLayout>
