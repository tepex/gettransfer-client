<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    app:behavior_hideable="false"
    app:behavior_peekHeight="@dimen/transfer_details_behaviour_peek_height"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <View
        android:layout_width="110dp"
        android:layout_height="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rectangle_swipe_down" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:paddingTop="6dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/colorTextBlack"
            android:fontFamily="@font/sf_pro_text_semibold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/verticalDivider1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="25 Sep 2018 at 22:40"/>

        <View
            android:id="@+id/verticalDivider1"
            android:layout_width="@dimen/transfer_details_vertical_divider_width"
            android:layout_height="0dp"
            android:background="@color/color_transfer_details_vertical_divider"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/verticalDivider1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/textDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/tvDistance"
                app:layout_constraintBottom_toBottomOf="@+id/tvDistance"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/color_transfer_details_text_gray"
                android:textSize="13sp"
                android:fontFamily="@font/sf_pro_text_regular"
                android:text="Distance:"/>

            <TextView
                android:id="@+id/tvDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textDistance"
                android:layout_marginStart="3dp"
                android:textSize="17sp"
                android:textColor="@color/colorTextBlack"
                android:fontFamily="@font/sf_pro_text_semibold"
                android:text="42km"/>

            <TextView
                android:id="@+id/textTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/tvTime"
                app:layout_constraintBottom_toBottomOf="@+id/tvTime"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/color_transfer_details_text_gray"
                android:textSize="13sp"
                android:fontFamily="@font/sf_pro_text_regular"
                android:text="Time:"/>

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvDistance"
                app:layout_constraintStart_toEndOf="@+id/textTime"
                android:layout_marginStart="3dp"
                android:textSize="17sp"
                android:textColor="@color/colorTextBlack"
                android:fontFamily="@font/sf_pro_text_semibold"
                android:text="1h 21m"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/transfer_details_horizontal_divider_height"
        android:background="@color/color_transfer_details_horizontal_divider"
        app:layout_constraintTop_toBottomOf="@+id/layoutCurrencyType" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:paddingTop="10dp"
        android:paddingBottom="6dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/verticalDivider2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/textPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/tvPrice"
                app:layout_constraintBottom_toBottomOf="@+id/tvPrice"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="13sp"
                android:fontFamily="@font/sf_pro_text_regular"
                android:textColor="@color/color_transfer_details_text_gray"
                android:text="Price:"/>

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textPrice"
                android:layout_marginStart="3dp"
                android:textSize="17sp"
                android:textColor="@color/colorTextBlack"
                android:fontFamily="@font/sf_pro_text_semibold"
                android:text="2042$"/>

            <TextView
                android:id="@+id/textNotPaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/tvNotPaid"
                app:layout_constraintBottom_toBottomOf="@+id/tvNotPaid"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="13sp"
                android:fontFamily="@font/sf_pro_text_regular"
                android:textColor="@color/color_transfer_details_text_gray"
                android:text="Not paid:"/>

            <TextView
                android:id="@+id/tvNotPaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvPrice"
                app:layout_constraintStart_toEndOf="@+id/textNotPaid"
                android:layout_marginStart="3dp"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:textColor="@color/colorTextBlack"
                android:fontFamily="@font/sf_pro_text_semibold"
                android:text="1430$"/>

        </android.support.constraint.ConstraintLayout>

        <View
            android:id="@+id/verticalDivider2"
            android:layout_width="@dimen/transfer_details_vertical_divider_width"
            android:layout_height="0dp"
            android:background="@color/color_transfer_details_vertical_divider"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <LinearLayout
            android:id="@+id/layoutTransferWillStartTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/verticalDivider2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/color_transfer_details_text_green"
                android:fontFamily="@font/sf_pro_text_regular"
                android:text="Transfer will start:"/>

            <TextView
                android:id="@+id/tvTransferWillStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/color_transfer_details_text_green"
                android:fontFamily="@font/sf_pro_text_semibold"
                android:layout_marginTop="3dp"
                android:text="in 22d 23h 59m"/>

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:orientation="horizontal"
        android:background="@color/color_transfer_details_background_gray">

        <include
            android:id="@+id/btnCall"
            layout="@layout/btn_layout_call_passenger"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="12dp" />

        <include
            android:id="@+id/btnChat"
            layout="@layout/btn_layout_chat_passenger"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="12dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutAboutTransport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitleAboutTransport"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@color/color_transfer_details_background_gray"
            android:text="About transport"
            android:textAllCaps="true"
            android:textSize="13sp"
            android:fontFamily="@font/sf_pro_text_semibold"
            android:textColor="@color/color_transfer_details_header_text_color"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center_vertical"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/transfer_details_horizontal_divider_height"
            android:background="@color/color_transfer_details_horizontal_divider"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/carPhoto"
                android:layout_width="140dp"
                android:layout_height="104dp"
                android:src="@drawable/ic_transport_type_unknown"/>

            <ImageView
                android:id="@+id/ivManyPhotos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_gallery_small_white"
                app:layout_constraintTop_toTopOf="@+id/carPhoto"
                app:layout_constraintEnd_toEndOf="@+id/carPhoto"
                android:layout_margin="7dp"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:background="@color/colorLayoutsOnImageBack"
                app:layout_constraintStart_toStartOf="@+id/carPhoto"
                app:layout_constraintEnd_toEndOf="@+id/carPhoto"
                app:layout_constraintBottom_toBottomOf="@+id/carPhoto"
                android:gravity="center">

                <com.willy.ratingbar.ScaleRatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srb_numStars="5"
                    app:srb_minimumStars="0"
                    app:srb_starHeight="@dimen/rating_bar_stars_height_width"
                    app:srb_starPadding="@dimen/rating_bar_stars_padding"
                    app:srb_starWidth="@dimen/rating_bar_stars_height_width"
                    app:srb_stepSize="0.1"
                    app:srb_isIndicator="true"
                    app:srb_clickable="false"
                    app:srb_drawableEmpty="@drawable/ic_star_empty"
                    app:srb_drawableFilled="@drawable/ic_star_filled"/>

                <ImageView
                    android:id="@+id/ivLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_like_button"
                    android:layout_marginStart="@dimen/view_offer_image_like_margin_start"/>

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/transfer_details_horizontal_divider_height"
            android:background="@color/color_transfer_details_horizontal_divider"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="15dp"
                android:textSize="17sp"
                android:textColor="@color/colorTextBlack"
                android:fontFamily="@font/sf_pro_text_regular"
                android:text="Business:"/>

            <ImageView
                android:id="@+id/imgPassengers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_passenger"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tvCountPassengers"/>

            <TextView
                android:id="@+id/tvCountPassengers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imgBaggage"
                android:layout_marginEnd="16dp"
                android:textSize="17sp"
                android:textColor="@color/colorTextBlack"
                android:fontFamily="@font/sf_pro_text_regular"
                android:text="x3"/>

            <ImageView
                android:id="@+id/imgBaggage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_baggage"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tvCountBaggage"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/tvCountBaggage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imgFreeWiFi"
                android:layout_marginEnd="16dp"
                android:textSize="17sp"
                android:textColor="@color/colorTextBlack"
                android:fontFamily="@font/sf_pro_text_regular"
                android:text="x3"/>

            <ImageView
                android:id="@+id/imgFreeWiFi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imgFreeWater"
                android:layout_marginEnd="16dp"
                app:srcCompat="@drawable/ic_wifi"/>

            <ImageView
                android:id="@+id/imgFreeWater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:srcCompat="@drawable/ic_free_water"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"/>

        </android.support.constraint.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/transfer_details_horizontal_divider_height"
            android:background="@color/color_transfer_details_horizontal_divider"/>

        <com.kg.gettransfer.presentation.ui.TransferDetailsField
            android:id="@+id/child_seats_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:title_transfer_details="Child seats"
            app:input_transfer_details="2"
            app:icon_img_transfer_details="@drawable/ic_child_seat"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/transfer_details_horizontal_divider_height"
            android:background="@color/color_transfer_details_horizontal_divider"/>

    </LinearLayout>

</LinearLayout>