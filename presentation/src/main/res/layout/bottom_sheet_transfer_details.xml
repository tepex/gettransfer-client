<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/back_top_rounded"
    app:behavior_hideable="false"
    app:behavior_peekHeight="@dimen/activity_transfer_details_behaviour_peek_height"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <View
        android:layout_width="@dimen/bottom_sheet_transfer_details_swiped_view_width"
        android:layout_height="@dimen/bottom_sheet_transfer_details_swiped_view_height"
        android:layout_marginTop="@dimen/bottom_sheet_transfer_details_swiped_view_margin_top_bottom"
        android:layout_marginBottom="@dimen/bottom_sheet_transfer_details_swiped_view_margin_top_bottom"
        android:background="@drawable/rectangle_swipe_down" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <include
                android:id="@+id/transfer_details_header"
                layout="@layout/transfer_details_header"/>

            <com.kg.gettransfer.presentation.ui.custom.TransferMainInfoView
                    android:id="@+id/transfer_details_main"
                    app:distance="100km"
                    app:distance_title="@string/LNG_RIDE_DISTANCE"
                    app:time="10h 34m"
                    app:time_title="@string/LNG_RIDE_TIME"
                    app:price="1030$"
                    app:price_title="@string/LNG_RIDE_PAYMENT_COST"
                    android:visibility="visible"
                    android:layout_marginTop="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv_bookNow_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:visibility="gone"
                    android:textColor="@color/color_transfer_details_text_green"
                    android:layout_marginTop="8dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
            android:text="Мы отправим вам e-mail с данными перевозчика в ближайшее время"/>

            <include
                    android:id="@+id/view_rate_ride"
                    layout="@layout/view_rate_your_transfer"
                    android:visibility="gone"/>

            <include
                    android:id="@+id/thanks_for_rate"
                    layout="@layout/view_thanks_for_rate_small"
                    android:visibility="gone"/>

            <com.kg.gettransfer.presentation.ui.custom.TransferDetailsField
                    android:id="@+id/back_trip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:input_transfer_details="04 Apr 2018 at 23:40"
                    app:title_transfer_details="@string/LNG_RIDE_RETURN_TRANSFER"/>

            <include
                    android:id="@+id/layoutAboutTransport"
                    layout="@layout/view_transfer_details_about_transport_new"
                    android:visibility="gone"/>

            <include
                    android:id="@+id/layoutAboutDriver"
                    layout="@layout/view_transfer_details_about_driver"
                    android:visibility="gone"/>

            <RelativeLayout
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <com.kg.gettransfer.presentation.ui.custom.TransferDetailsField
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title_transfer_details="Passengers"
                        app:input_transfer_details=""/>

                <com.kg.gettransfer.presentation.ui.custom.SeatsView
                        android:id="@+id/transfer_details_view_seats"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                        app:passenger_seats="x3"
                        app:child_seats="x2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </RelativeLayout>

            <include
                    android:id="@+id/comment_view"
                    layout="@layout/view_transfer_details_comment"
                    android:visibility="gone"/>

            <include
                    android:id="@+id/layoutAboutRequest"
                    layout="@layout/view_transfer_details_about_request"
                    android:visibility="visible"/>

            <LinearLayout
                    android:id="@+id/btnsLayoutBottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/color_transfer_details_background_gray"
                    android:paddingBottom="@dimen/bottom_sheet_transfer_details_support_bottom_layout_buttons_padding_bottom"
                    android:visibility="visible">

                <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/flexbox_TransportTypes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/bottom_sheet_transfer_details_table_layout_transport_types_margin_top_bottom"
                        android:paddingBottom="@dimen/bottom_sheet_transfer_details_table_layout_transport_types_margin_top_bottom"
                        android:paddingStart="@dimen/bottom_sheet_transfer_details_table_layout_transport_types_margin_start_end"
                        android:paddingEnd="@dimen/bottom_sheet_transfer_details_table_layout_transport_types_margin_start_end"
                        app:flexWrap="wrap"
                        android:visibility="gone"/>

            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>