<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/view_transfer_details_info_line_min_height"
        android:paddingTop="@dimen/view_transfer_details_info_padding_top_bottom_6dp"
        android:paddingBottom="@dimen/view_transfer_details_info_padding_top_bottom_10dp">

        <!-- top left -->
        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/verticalDivider1"
            android:layout_marginStart="@dimen/view_transfer_details_info_items_margin_start_end"
            android:layout_marginEnd="@dimen/view_transfer_details_info_items_margin_start_end">

            <ImageView
                android:id="@+id/imgCalendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/tvTransferDate"
                app:layout_constraintBottom_toBottomOf="@+id/tvTransferDate"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/ic_calendar_small"/>

            <TextView
                android:id="@+id/tvTransferDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgCalendar"
                android:layout_marginStart="@dimen/view_transfer_details_info_transfer_date_margin_start"
                android:textSize="@dimen/activity_transfer_details_text_size_17sp"
                android:textColor="@color/colorTextBlack"
                android:fontFamily="@font/sf_pro_text_semibold"
                android:text="25 Sep 2018"/>

            <TextView
                android:id="@+id/tvTransferTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTransferDate"
                android:textSize="@dimen/activity_transfer_details_text_size_17sp"
                android:textColor="@color/colorTextBlack"
                android:fontFamily="@font/sf_pro_text_semibold"
                android:text="at 22:40"/>

        </android.support.constraint.ConstraintLayout>

        <View
            android:id="@+id/verticalDivider1"
            android:layout_width="@dimen/activity_transfer_details_vertical_divider_width"
            android:layout_height="0dp"
            android:background="@color/color_transfer_details_vertical_divider"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- top right -->
        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/verticalDivider1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/view_transfer_details_info_items_margin_start_end"
            android:layout_marginEnd="@dimen/view_transfer_details_info_items_margin_start_end">

            <TextView
                android:id="@+id/textDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/tvDistance"
                app:layout_constraintBottom_toBottomOf="@+id/tvDistance"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/color_transfer_details_text_gray"
                android:textSize="@dimen/activity_transfer_details_text_size_13sp"
                android:fontFamily="@font/sf_pro_text_regular"
                android:text="@string/LNG_RIDE_DISTANCE"/>

            <TextView
                android:id="@+id/tvDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textDistance"
                android:layout_marginStart="@dimen/view_transfer_details_info_texts_margin_start_3dp"
                android:textSize="@dimen/activity_transfer_details_text_size_17sp"
                android:textColor="@color/colorTextBlack"
                android:fontFamily="@font/sf_pro_text_semibold" />

            <TextView
                android:id="@+id/textDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/tvDuration"
                app:layout_constraintBottom_toBottomOf="@+id/tvDuration"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/color_transfer_details_text_gray"
                android:textSize="@dimen/activity_transfer_details_text_size_13sp"
                android:fontFamily="@font/sf_pro_text_regular"
                android:text="@string/LNG_RIDE_TIME"/>

            <TextView
                android:id="@+id/tvDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvDistance"
                app:layout_constraintStart_toEndOf="@+id/textDuration"
                android:layout_marginStart="@dimen/view_transfer_details_info_texts_margin_start_3dp"
                android:textSize="@dimen/activity_transfer_details_text_size_17sp"
                android:textColor="@color/colorTextBlack"
                android:fontFamily="@font/sf_pro_text_semibold"
                android:text="1h 21m"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_transfer_details_horizontal_divider_height"
        android:background="@color/color_transfer_details_horizontal_divider"
        app:layout_constraintTop_toBottomOf="@+id/layoutCurrencyType" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/view_transfer_details_info_line_min_height"
        android:paddingTop="@dimen/view_transfer_details_info_padding_top_bottom_10dp"
        android:paddingBottom="@dimen/view_transfer_details_info_padding_top_bottom_6dp">

        <!-- bottom left -->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/layoutPrices"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/verticalDivider2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/view_transfer_details_info_items_margin_start_end"
            android:layout_marginEnd="@dimen/view_transfer_details_info_items_margin_start_end"
            android:visibility="gone">

            <TextView
                android:id="@+id/textPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/tvPrice"
                app:layout_constraintBottom_toBottomOf="@+id/tvPrice"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="@dimen/activity_transfer_details_text_size_13sp"
                android:fontFamily="@font/sf_pro_text_regular"
                android:textColor="@color/color_transfer_details_text_gray"
                android:text="@string/LNG_RIDE_PAYMENT_COST"/>

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textPrice"
                android:layout_marginStart="@dimen/view_transfer_details_info_texts_margin_start_3dp"
                android:textSize="@dimen/activity_transfer_details_text_size_17sp"
                android:textColor="@color/colorTextBlack"
                android:fontFamily="@font/sf_pro_text_semibold"
                android:text="2042$"/>

            <TextView
                android:id="@+id/textNotPaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/tvNotPaid"
                app:layout_constraintBottom_toBottomOf="@+id/tvNotPaid"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="@dimen/activity_transfer_details_text_size_13sp"
                android:fontFamily="@font/sf_pro_text_regular"
                android:textColor="@color/color_transfer_details_text_gray"
                android:text="@string/LNG_RIDE_NOT_PAID"/>

            <TextView
                android:id="@+id/tvNotPaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvPrice"
                app:layout_constraintStart_toEndOf="@+id/textNotPaid"
                android:layout_marginStart="@dimen/view_transfer_details_info_texts_margin_start_3dp"
                android:layout_marginTop="@dimen/view_transfer_details_info_texts_margin_top_5dp"
                android:textSize="@dimen/activity_transfer_details_text_size_13sp"
                android:textColor="@color/colorTextBlack"
                android:fontFamily="@font/sf_pro_text_semibold"
                android:text="1430$"/>

        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:id="@+id/layoutYourPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/verticalDivider2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/view_transfer_details_info_items_margin_start_end"
            android:layout_marginEnd="@dimen/view_transfer_details_info_items_margin_start_end"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/textYourPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/activity_transfer_details_text_size_13sp"
                android:fontFamily="@font/sf_pro_text_regular"
                android:textColor="@color/color_transfer_details_text_gray"
                android:text="@string/LNG_RIDE_PRICE_YOUR"/>

            <TextView
                android:id="@+id/tvYourPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_transfer_details_info_texts_margin_start_3dp"
                android:textSize="@dimen/activity_transfer_details_text_size_17sp"
                android:textColor="@color/colorTextBlack"
                android:fontFamily="@font/sf_pro_text_semibold"
                android:text="2042$"/>

        </LinearLayout>

        <View
            android:id="@+id/verticalDivider2"
            android:layout_width="@dimen/activity_transfer_details_vertical_divider_width"
            android:layout_height="0dp"
            android:background="@color/color_transfer_details_vertical_divider"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- bottom right -->
        <LinearLayout
            android:id="@+id/bottomRightLayouts"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/verticalDivider2"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/layoutRequestSentOrCompletedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/view_transfer_details_info_items_margin_start_end"
                android:layout_marginEnd="@dimen/view_transfer_details_info_items_margin_start_end"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textRequestSentOrCompletedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_transfer_details_text_gray"
                    android:textSize="@dimen/activity_transfer_details_text_size_13sp"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:text="@string/LNG_RIDE_REQUEST_WAS_SENT"/>

                <TextView
                    android:id="@+id/tvRequestSentOrCompletedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_transfer_details_info_texts_margin_start_3dp"
                    android:textSize="@dimen/activity_transfer_details_text_size_17sp"
                    android:textColor="@color/colorTextBlack"
                    android:fontFamily="@font/sf_pro_text_semibold"
                    android:text="20 Sep at 12:42"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tvTransferCancelledOrInProgress"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/view_transfer_details_info_items_margin_start_end"
                android:layout_marginEnd="@dimen/view_transfer_details_info_items_margin_start_end"
                android:textSize="@dimen/activity_transfer_details_text_size_17sp"
                android:fontFamily="@font/sf_pro_text_semibold"
                android:textColor="@color/color_transfer_details_text_red"
                android:gravity="center_vertical"
                android:visibility="gone">

            </TextView>

            <LinearLayout
                android:id="@+id/layoutTransferWillStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/view_transfer_details_info_items_margin_start_end"
                android:layout_marginEnd="@dimen/view_transfer_details_info_items_margin_start_end"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textTransferWillStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/activity_transfer_details_text_size_13sp"
                    android:textColor="@color/color_transfer_details_text_green"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:text="@string/LNG_TRANSFER_START"/>

                <TextView
                    android:id="@+id/tvTransferWillStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/activity_transfer_details_text_size_17sp"
                    android:textColor="@color/color_transfer_details_text_green"
                    android:fontFamily="@font/sf_pro_text_semibold"
                    android:layout_marginTop="@dimen/view_transfer_details_info_texts_margin_start_3dp"
                    android:text="in 22d 23h 59m"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</LinearLayout>