<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/nav_item">

    <ImageView
        android:id="@+id/imgRequests"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_transfers"/>

    <TextView
        android:id="@+id/title"
        style="@style/nav_item_title"
        android:text="@string/text_nav_requests_title"
        android:layout_toEndOf="@+id/imgRequests"/>

    <TextView
        style="@style/nav_item_subtitle"
        android:text="@string/text_nav_requests_subtitle"
        android:layout_below="@+id/title"
        android:layout_toEndOf="@+id/imgRequests"/>
</RelativeLayout>
