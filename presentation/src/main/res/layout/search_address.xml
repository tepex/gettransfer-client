<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingBottom="8dp"
	tools:context=".presentation.ui.SearchAddress">

	<FrameLayout
		android:layout_width="37dp"
		android:layout_height="44dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent" >

		<ImageView
			android:id="@+id/array"
			android:layout_gravity="center"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/ic_dark_arrow"
			android:visibility="gone" />

	</FrameLayout>



	<TextView
		android:id="@+id/sub_title"
		android:layout_width="0dp"
		android:text="Pickup location"
		app:layout_constraintTop_toTopOf="parent"
		android:layout_marginTop="8dp"
		android:fontFamily="@font/sf_pro_text_regular"
		android:layout_height="@dimen/search_sub_title_height"
		android:textSize="@dimen/search_sub_title_textSize"/>

	<EditText
		android:id="@+id/addressField"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="@dimen/search_form_address_margin"
		android:background="@null"
		android:letterSpacing="-0.02"
		android:fontFamily="@font/sf_pro_text_semibold"
		android:lineSpacingExtra="5sp"
		android:singleLine="true"
		android:textColor="@color/colorTextBlack"
		android:textSize="@dimen/search_main_textSize"
		android:text="Tverskaya, 21, Moscow, Russia"

		app:layout_constraintEnd_toStartOf="@+id/fl_clearBtn"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/sub_title" />

	<FrameLayout
		android:id="@+id/fl_clearBtn"
		android:layout_width="25dp"
		android:layout_height="25dp"
		android:visibility="invisible"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<ImageButton
			android:id="@+id/im_clearBtn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:background="@android:drawable/presence_offline"

			/>
	</FrameLayout>
</android.support.constraint.ConstraintLayout>
