<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layoutCalendarItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/carrier_trips_month_fragments_lines_height"
    android:gravity="center">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/selectDateIndicator"
            android:layout_width="@dimen/carrier_trips_month_fragments_items_select_date_indicator_size"
            android:layout_height="@dimen/carrier_trips_month_fragments_items_select_date_indicator_size"
            android:src="@drawable/back_calendar_indicator"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dayOfMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23"/>

            <View
                android:id="@+id/countTripsIndicator"
                android:layout_width="@dimen/carrier_trips_month_fragments_items_count_trips_indicator_size"
                android:layout_height="@dimen/carrier_trips_month_fragments_items_count_trips_indicator_size"
                android:layout_marginTop="@dimen/carrier_trips_month_fragments_items_count_trips_indicator_margin_top"
                android:background="@drawable/trip_in_calendar_indicator"
                android:visibility="gone"/>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>