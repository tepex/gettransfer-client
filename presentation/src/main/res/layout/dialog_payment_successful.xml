        <!--android:textColor="@color/colorGreen"-->
        <!--android:textSize="17sp"-->
        <!--android:fontFamily="@font/sf_pro_text_regular"/>-->

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapViewRoute"
        android:layout_width="154dp"
        android:layout_height="163dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBookingNumber" />

    <include
        android:id="@+id/btnCall"
        layout="@layout/btn_layout_call_passenger"
        android:layout_width="126dp"
        android:layout_height="44dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tvRemainTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mapViewRoute"
        app:layout_constraintTop_toTopOf="@+id/mapViewRoute" />

    <!--<include-->
        <!--android:id="@+id/btnChat"-->
        <!--layout="@layout/btn_layout_chat_passenger"-->
        <!--android:layout_width="126dp"-->
        <!--android:layout_height="44dp"-->
        <!--android:layout_marginTop="8dp"-->
        <!--app:layout_constraintEnd_toEndOf="@+id/btnCall"-->
        <!--app:layout_constraintStart_toStartOf="@+id/btnCall"-->
        <!--app:layout_constraintTop_toBottomOf="@+id/btnCall" />-->

    <TextView
        android:id="@+id/tvRemainTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/mapViewRoute"
        app:layout_constraintTop_toBottomOf="@+id/mapViewRoute"
        android:text="@string/LNG_TRANSFER_WILL_START"
        android:textColor="@color/colorGreen"
        android:textSize="12sp"
        android:fontFamily="@font/sf_pro_text_regular"/>

    <include
        android:id="@+id/btnSupport"
        layout="@layout/btn_layout_support"
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_activity_height_layouts"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRemainTime" />
</android.support.constraint.ConstraintLayout>