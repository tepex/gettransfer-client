<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:behavior_hideable="false"
    app:behavior_peekHeight="@dimen/activity_carrier_trips_details_behaviour_peek_height"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_for_area_behind_rounded_corners">

        <View
            android:id="@+id/viewGradient"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_main_gradient_layout_height"
            android:background="@drawable/back_bottom_sheet_bar_gradient"
            android:layout_gravity="bottom"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/bottom_sheet_carrier_trip_buttons_layout_margin_bottom">

            <LinearLayout
                android:id="@+id/layoutBtnOnMyWay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/layoutBtnCall"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/btnOnMyWay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_on_my_way_carrier_trip_details"
                    android:elevation="@dimen/bottom_sheet_carrier_trip_buttons_elevation"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/bottom_sheet_carrier_trip_buttons_text_margin_top"
                    android:textSize="@dimen/bottom_sheet_carrier_trip_texts_size_12sp"
                    android:textColor="@color/colorTextBlack"
                    android:fontFamily="@font/sf_pro_text_semibold"
                    android:textAllCaps="true"
                    android:text="@string/LNG_TRIP_ON_MY_WAY"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutBtnCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/layoutBtnOnMyWay"
                app:layout_constraintEnd_toStartOf="@+id/layoutBtnChat"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/btnCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_call_carrier_trip_details"
                    android:elevation="@dimen/bottom_sheet_carrier_trip_buttons_elevation"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/bottom_sheet_carrier_trip_buttons_text_margin_top"
                    android:textSize="@dimen/bottom_sheet_carrier_trip_texts_size_12sp"
                    android:textColor="@color/colorTextBlack"
                    android:fontFamily="@font/sf_pro_text_semibold"
                    android:textAllCaps="true"
                    android:text="@string/LNG_PAYMENT_CALL"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutBtnChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/layoutBtnCall"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/btnChat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_chat_carrier_trip_details"
                    android:elevation="@dimen/bottom_sheet_carrier_trip_buttons_elevation"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/bottom_sheet_carrier_trip_buttons_text_margin_top"
                    android:textSize="@dimen/bottom_sheet_carrier_trip_texts_size_12sp"
                    android:textColor="@color/colorTextBlack"
                    android:fontFamily="@font/sf_pro_text_semibold"
                    android:textAllCaps="true"
                    android:text="@string/LNG_PAYMENT_CHAT"/>

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back_rounded"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <View
            android:layout_width="@dimen/bottom_sheet_carrier_trip_details_swiped_view_width"
            android:layout_height="@dimen/bottom_sheet_carrier_trip_details_swiped_view_height"
            android:layout_marginTop="@dimen/bottom_sheet_carrier_trip_details_swiped_view_margin_top_bottom"
            android:layout_marginBottom="@dimen/bottom_sheet_carrier_trip_details_swiped_view_margin_top_bottom"
            android:background="@drawable/rectangle_swipe_down" />

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scrollContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.kg.gettransfer.presentation.ui.CarrierTripInfoItem
                    android:id="@+id/layoutCarrierTripInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:id="@+id/layoutMoreInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/bottom_sheet_carrier_trip_layouts_card_view_padding_top"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/bottom_sheet_carrier_trip_element_padding_16dp"
                        android:textSize="@dimen/bottom_sheet_carrier_trip_texts_size_12sp"
                        android:fontFamily="@font/sf_pro_text_regular"
                        android:textColor="@color/color_driver_mode_text_gray"
                        android:textAllCaps="true"
                        android:text="@string/LNG_MORE_INFO"/>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/bottom_sheet_carrier_trip_layouts_card_view_margin"
                        app:cardElevation="@dimen/bottom_sheet_carrier_trip_layouts_card_view_elevation"
                        app:cardCornerRadius="@dimen/bottom_sheet_carrier_trip_layouts_card_view_radius">

                        <include
                            layout="@layout/view_carrier_trip_details_layout_more_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutAboutCar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/bottom_sheet_carrier_trip_layouts_card_view_padding_top"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/bottom_sheet_carrier_trip_element_padding_16dp"
                        android:textSize="@dimen/bottom_sheet_carrier_trip_texts_size_12sp"
                        android:fontFamily="@font/sf_pro_text_regular"
                        android:textColor="@color/color_driver_mode_text_gray"
                        android:textAllCaps="true"
                        android:text="@string/LNG_ABOUT_CAR"/>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/bottom_sheet_carrier_trip_layouts_card_view_margin"
                        app:cardElevation="@dimen/bottom_sheet_carrier_trip_layouts_card_view_elevation"
                        app:cardCornerRadius="@dimen/bottom_sheet_carrier_trip_layouts_card_view_radius">

                        <include
                            layout="@layout/view_carrier_trip_details_layout_about_car"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutAboutPassenger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/bottom_sheet_carrier_trip_layouts_card_view_padding_top"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/bottom_sheet_carrier_trip_element_padding_16dp"
                        android:textSize="@dimen/bottom_sheet_carrier_trip_texts_size_12sp"
                        android:fontFamily="@font/sf_pro_text_regular"
                        android:textColor="@color/color_driver_mode_text_gray"
                        android:textAllCaps="true"
                        android:text="@string/LNG_ABOUT_PASSENGER"/>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/bottom_sheet_carrier_trip_layouts_card_view_margin"
                        app:cardElevation="@dimen/bottom_sheet_carrier_trip_layouts_card_view_elevation"
                        app:cardCornerRadius="@dimen/bottom_sheet_carrier_trip_layouts_card_view_radius">

                        <include
                            layout="@layout/view_carrier_trip_details_layout_about_passenger"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnSupport"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bottom_sheet_carrier_trip_btn_support_height"
                    android:background="@drawable/bg_yellow_button_customer_support"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/bottom_sheet_carrier_trip_btn_support_margin_top"
                    android:layout_marginBottom="@dimen/bottom_sheet_carrier_trip_btn_support_margin_bottom"
                    android:layout_marginStart="@dimen/bottom_sheet_carrier_trip_btn_support_margin_start_end"
                    android:layout_marginEnd="@dimen/bottom_sheet_carrier_trip_btn_support_margin_start_end">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/bottom_sheet_carrier_trip_btn_support_img_margin_end"
                        app:srcCompat="@drawable/ic_support"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/LNG_CUSTOMER_SUPPORT"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="@dimen/bottom_sheet_carrier_trip_texts_size_17sp"
                        android:fontFamily="@font/sf_pro_text_regular"
                        android:textAllCaps="true"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>

</LinearLayout>