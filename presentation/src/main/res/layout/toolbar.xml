<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/toolbar"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:fitsSystemWindows="true"
	android:minHeight="?android:attr/actionBarSize"
	tools:ignore="Overdraw" >

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:id="@+id/toolbar_title"
		android:textSize="@dimen/toolbar_title_text_size"
		android:fontFamily="@font/sf_pro_text_bold"
		android:textColor="@android:color/black"/>

	<android.support.constraint.ConstraintLayout
		android:id="@+id/layoutChatTitle"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:layout_gravity="center"
		android:visibility="gone">

		<ImageView
			android:id="@+id/chatTitleButtonBack"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			app:srcCompat="@drawable/ic_button_back_title"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:gravity="center"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginStart="@dimen/toolbar_transfer_from_margin_start_end"
			android:layout_marginEnd="@dimen/toolbar_transfer_from_margin_start_end">

			<TextView
				android:id="@+id/transferFromOrNameText"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:textSize="@dimen/toolbar_transfer_from_text_size"
				android:fontFamily="@font/sf_pro_text_semibold"
				android:textColor="@color/color_gtr_black"
				android:lines="1"
				android:ellipsize="end" />

			<TextView
				android:id="@+id/transferStartDateText"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:textSize="@dimen/toolbar_start_date_text_size"
				android:fontFamily="@font/sf_pro_text_regular"
				android:textColor="@color/color_gtr_grey"
				android:layout_marginTop="@dimen/toolbar_transfer_start_date_margin_top"
				android:visibility="gone"/>

		</LinearLayout>

		<ImageView
			android:id="@+id/titleBtnCall"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:srcCompat="@drawable/ic_phone_title"
			android:layout_marginEnd="@dimen/toolbar_transfer_btn_call_margin_end"
			android:visibility="gone"/>

	</android.support.constraint.ConstraintLayout>

	<LinearLayout
		android:id="@+id/layoutLogs"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		android:layout_gravity="end"
		android:layout_marginEnd="@dimen/toolbar_buttons_margin_end"
		android:visibility="gone">

		<TextView
			android:id="@+id/btnClear"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:text="@string/LNG_CLEAR"
			android:textSize="@dimen/toolbar_buttons_text_size"
			android:fontFamily="@font/sf_pro_text_regular"
			android:textColor="@android:color/black"
			android:layout_marginEnd="@dimen/toolbar_buttons_margin_end"/>

		<TextView
			android:id="@+id/btnShare"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:text="@string/share"
			android:textSize="@dimen/toolbar_buttons_text_size"
			android:fontFamily="@font/sf_pro_text_regular"
			android:textColor="@android:color/black" />

	</LinearLayout>

	<LinearLayout
		android:id="@+id/carrierTripsChangingTypeViewButtons"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		android:layout_gravity="end"
		android:gravity="center_vertical"
		android:layout_marginEnd="@dimen/toolbar_buttons_margin_end"
		android:visibility="gone">

		<ImageView
			android:id="@+id/buttonListView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:srcCompat="@drawable/ic_list"
			android:visibility="gone"/>

		<ImageView
			android:id="@+id/buttonCalendarView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:srcCompat="@drawable/ic_calendar"
			android:visibility="gone"/>

	</LinearLayout>

</android.support.v7.widget.Toolbar>
