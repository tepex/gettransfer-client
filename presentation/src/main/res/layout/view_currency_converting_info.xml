<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_convert_description"
        android:layout_width="21dp"
        android:layout_height="19dp"

        app:layout_constraintTop_toTopOf="@+id/tv_convert_description"
        app:layout_constraintBottom_toBottomOf="@+id/tv_convert_description"
        app:layout_constraintEnd_toStartOf="@id/tv_convert_description"
        android:layout_marginEnd="12dp"

        android:src="@drawable/ic_convert_currency"/>

    <ImageView
        android:id="@+id/iv_payment_description"
        android:layout_width="26dp"
        android:layout_height="19dp"

        app:layout_constraintTop_toTopOf="@+id/tv_payment_description"
        app:layout_constraintBottom_toBottomOf="@+id/tv_payment_description"
        app:layout_constraintEnd_toStartOf="@id/tv_payment_description"
        android:layout_marginEnd="12dp"

        android:src="@drawable/ic_payment_desciption"/>

    <TextView
        android:id="@+id/tv_convert_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toTopOf="@id/info_separator"
        app:layout_constraintStart_toStartOf="parent"

        android:textColor="@color/payment_currency_info_text"
        android:textSize="14sp"
        android:fontFamily="@font/sf_pro_display_regular"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:paddingStart="0dp"
        android:paddingEnd="12dp"
        android:layout_marginStart="57dp"

        tools:text="@string/LNG_RIDE_PAY_CONVERT1"/>

    <TextView
        android:id="@+id/tv_payment_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/info_separator"
        app:layout_constraintStart_toStartOf="parent"

        android:textSize="14sp"
        android:textColor="@color/payment_currency_info_text"
        android:fontFamily="@font/sf_pro_display_regular"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:paddingStart="0dp"
        android:paddingEnd="12dp"
        android:layout_marginStart="57dp"

        tools:text="@string/LNG_RIDE_PAY_CONVERT2"/>

    <View
        android:id="@+id/info_separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/create_transfer_divider_height"
        android:layout_marginStart="@dimen/divider_margin_start"
        android:layout_marginEnd="@dimen/divider_margin_end"


        android:background="@color/separator_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>