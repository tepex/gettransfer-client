<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/view_communication_button_name_margins"
        app:backgroundTint="@color/colorPrimaryDark"
        app:fabCustomSize="@dimen/view_communication_button_img_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_call"
        app:tint="@null" />

    <TextView
        android:id="@+id/btnName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_communication_button_name_margin_top"
        android:layout_marginBottom="@dimen/view_communication_button_name_margins"
        android:fontFamily="@font/sf_pro_text_regular"
        android:gravity="center"
        android:lines="2"
        android:text="@string/LNG_PAYMENT_CHAT"
        android:textColor="@color/colorTextBlack"
        android:textSize="@dimen/view_communication_button_name_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnImg" />

    <TextView
        android:id="@+id/tvEventsCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_circle_red"
        android:elevation="5dp"
        android:gravity="center"
        android:paddingStart="@dimen/margin4"
        android:paddingEnd="@dimen/margin4"
        android:textColor="@android:color/white"
        android:translationZ="7dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/btnImg"
        app:layout_constraintEnd_toEndOf="@+id/btnImg"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btnImg"
        app:layout_constraintTop_toTopOf="@+id/btnImg"
        app:layout_constraintVertical_bias="0.0"
        tools:text="10"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>