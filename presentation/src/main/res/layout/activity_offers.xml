<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_root_offers"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/layoutTransferRequestInfo"
                layout="@layout/view_transfer_request_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_offers_excellent_price_layout_height"
                android:background="@color/colorBtnGreen">
                
                <ImageView
                    android:id="@+id/ivLock"
                    android:layout_width="@dimen/activity_offers_iv_lock_width"
                    android:layout_height="@dimen/activity_offers_iv_lock_height"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="@dimen/activity_offers_iv_lock_margin_start"
                    app:srcCompat="@drawable/ic_lock"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="@dimen/activity_offers_excellent_price_layout_margin_start"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvExcellentPrice1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_text_bold"
                        android:textSize="@dimen/activity_offers_excellent_price_text_size"
                        android:gravity="center"
                        android:text="@string/excellent_price_text_1"
                        android:textColor="@color/colorWhite" />

                    <TextView
                        android:id="@+id/tvExcellentPrice2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_text_regular"
                        android:textSize="@dimen/activity_offers_excellent_price_text_size"
                        android:gravity="center"
                        android:text="@string/excellent_price_text_2"
                        android:textColor="@color/colorWhite" />

                </LinearLayout>

            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_offers_sorted_layout_height"
                android:orientation="horizontal"
                android:background="@color/colorBack"
                android:paddingTop="@dimen/activity_offers_sorted_layout_padding_top_bottom"
                android:paddingBottom="@dimen/activity_offers_sorted_layout_padding_top_bottom"
                android:paddingStart="@dimen/activity_offers_sorted_layout_padding_start_end"
                android:paddingEnd="@dimen/activity_offers_sorted_layout_padding_start_end">

                <LinearLayout
                    android:id="@+id/sortYear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/activity_offers_sorted_layout_left_right_elements_margin_side"
                    android:gravity="center"
                    android:background="@drawable/back_sorted_layouts">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/helvetica_neue"
                        android:textSize="@dimen/activity_offers_sorted_layout_texts_size"
                        android:textColor="@color/colorTextBlack"
                        android:text="@string/sorted_year_made_text"/>

                    <ImageView
                        android:id="@+id/triangleYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_triangle"
                        android:layout_marginStart="@dimen/activity_offers_sorted_layout_triangle_margin_start"
                        android:visibility="gone"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sortRating"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/activity_offers_sorted_layout_center_element_margin_side"
                    android:layout_marginEnd="@dimen/activity_offers_sorted_layout_center_element_margin_side"
                    android:gravity="center"
                    android:background="@drawable/back_sorted_layouts">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/helvetica_neue"
                        android:textSize="@dimen/activity_offers_sorted_layout_texts_size"
                        android:textColor="@color/colorTextBlack"
                        android:text="@string/sorted_rating_text"/>

                    <ImageView
                        android:id="@+id/triangleRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_triangle"
                        android:layout_marginStart="@dimen/activity_offers_sorted_layout_triangle_margin_start"
                        android:visibility="gone"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sortPrice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/activity_offers_sorted_layout_left_right_elements_margin_side"
                    android:gravity="center"
                    android:background="@drawable/back_sorted_layouts">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/helvetica_neue"
                        android:textSize="@dimen/activity_offers_sorted_layout_texts_size"
                        android:textColor="@color/colorTextBlack"
                        android:text="@string/sorted_price_text"/>

                    <ImageView
                        android:id="@+id/trianglePrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_triangle"
                        android:layout_marginStart="@dimen/activity_offers_sorted_layout_triangle_margin_start"
                        android:visibility="gone"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_offers_divider_height"
                android:background="@color/colorDividerGray" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvOffers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <include
        android:id="@+id/sheetOfferDetails"
        layout="@layout/bottom_sheet_offer_details"/>

</LinearLayout>