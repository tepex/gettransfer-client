<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|top"
    android:background="@android:color/white"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="false"
    android:orientation="vertical"
    android:transitionName="@string/searchTransitionName">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <include
            android:id="@+id/icons_container"
            layout="@layout/a_b_view"
            android:layout_gravity="bottom"
            android:layout_width="@dimen/search_marginStart"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.kg.gettransfer.presentation.ui.SearchAddress
                android:id="@+id/searchFrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hint="@string/LNG_FIELD_SOURCE" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_transfer_divider_height"
                android:background="@color/colorDividerGray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.kg.gettransfer.presentation.ui.SearchAddress
                    android:id="@+id/searchTo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hint="@string/LNG_FIELD_DESTINATION_WHERE" />

                <ImageView
                    android:id="@+id/ivSelectFieldTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_dark_arrow"/>

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/create_transfer_divider_height"
        android:background="@color/colorDividerGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="@dimen/general_button_width"
        android:layout_height="@dimen/general_button_height"
        android:layout_gravity="center"
        android:layout_margin="@dimen/btn_next_main_margin_16dp"
        android:background="@drawable/btn_bg_rounded"
        android:enabled="false"
        android:text="@string/LNG_NEXT"
        android:textColor="@color/colorWhite" />

</LinearLayout>
