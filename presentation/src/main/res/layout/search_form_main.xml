<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/search"
	android:transitionName="@string/searchTransitionName"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:descendantFocusability="beforeDescendants"
	android:focusableInTouchMode="true"
	android:layout_gravity="center_horizontal|top"
	android:orientation="vertical"
	android:background="@android:color/white">

	<com.kg.gettransfer.presentation.ui.SearchAddress
		android:id="@+id/searchFrom"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:hint="@string/search_from_hint" >

		<Button
			android:id="@+id/btnEntrance2"
			android:layout_width="103dp"
			android:layout_height="26dp"
			android:layout_marginBottom="8dp"
			android:layout_marginEnd="8dp"
			android:layout_marginTop="8dp"
			android:layout_marginStart="10dp"
			android:background="@drawable/btn_bg_rounded"
			android:text="@string/entrance"
			android:textColor="@color/colorWhite"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent" />
	</com.kg.gettransfer.presentation.ui.SearchAddress>

	<com.kg.gettransfer.presentation.ui.SearchAddress
		android:id="@+id/searchTo"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:hint="@string/search_to_hint" >

	</com.kg.gettransfer.presentation.ui.SearchAddress>

	<Button
		android:id="@+id/btnNext"
		android:layout_width="300dp"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/btn_next_main_margin_16dp"
		android:text="@string/next"
		android:textColor="@color/colorWhite"
		android:background="@drawable/btn_bg_rounded"
		android:enabled="false"
		android:layout_gravity="center"/>

</LinearLayout>
