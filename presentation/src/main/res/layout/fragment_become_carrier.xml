<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        app:layout_constraintTop_toTopOf="parent"
        android:fitsSystemWindows="true">

        <include
            layout="@layout/toolbar_nav_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?android:attr/actionBarSize"/>
    </com.google.android.material.appbar.AppBarLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        app:layout_constraintBottom_toTopOf="@+id/btn_continue"
        android:paddingStart="@dimen/become_a_carrier_elements_horizontal_margin"
        android:paddingEnd="@dimen/become_a_carrier_elements_horizontal_margin"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_driver_logo_rounded" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/sf_font_semi_bold_16_sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/become_a_carrier_title_vertical_margins"
            android:layout_marginBottom="@dimen/become_a_carrier_title_vertical_margins"
            android:gravity="center_horizontal"
            android:text="@string/LNG_LOGIN_CARRIER_SIGNUP_TITLE" />

        <TextView
            android:id="@+id/tv_info"
            style="@style/sf_font_pro_text_regular_grey"
            android:textSize="@dimen/become_a_carrier_info_text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/LNG_BECOME_A_CARRIER_INFO" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_continue"
        style="@style/sf_pro_text_semibold_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/become_a_carrier_title_continue_btn_horizontal_margins"
        android:layout_marginEnd="@dimen/become_a_carrier_title_continue_btn_horizontal_margins"
        android:layout_marginBottom="@dimen/become_a_carrier_title_continue_btn_margin_bottom"
        android:background="@drawable/btn_bg_rounded"
        android:text="@string/LNG_BECOME_A_CARRIER_ANDROID_CONTINUE"
        android:textSize="@dimen/become_a_carrier_continue_btn_text_size" />

</androidx.constraintlayout.widget.ConstraintLayout>