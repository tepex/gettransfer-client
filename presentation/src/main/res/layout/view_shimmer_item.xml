<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:padding="12dp"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">


    <View
        android:id="@+id/shimmer_top_title"
        android:layout_width="250dp"
        android:layout_height="@dimen/line_height"
        style="@style/shimmer_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/shimmer_top_subtitle"
        android:layout_width="150dp"
        android:layout_height="@dimen/line_height"
        style="@style/shimmer_item"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_top_title"/>


    <View
        android:id="@+id/shimmer_top_icon"
        android:layout_width="@dimen/circle_diameter"
        android:layout_height="@dimen/circle_diameter"
        android:background="@drawable/shimmer_circle"

        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_top_subtitle"/>

    <View
        android:id="@+id/shimmer_top_info"
        android:layout_width="250dp"
        android:layout_height="@dimen/line_height"
        style="@style/shimmer_item"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/shimmer_top_icon"
        app:layout_constraintTop_toTopOf="@+id/shimmer_top_icon"
        />

    <View
        android:id="@+id/shimmer_top_subinfo"
        android:layout_width="150dp"
        android:layout_height="@dimen/line_height"
        style="@style/shimmer_item"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/shimmer_top_icon"
        app:layout_constraintBottom_toBottomOf="@+id/shimmer_top_icon"/>

    <View
        android:id="@+id/shimmer_bottom_icon"
        android:layout_width="@dimen/circle_diameter"
        android:layout_height="@dimen/circle_diameter"
        android:background="@drawable/shimmer_circle"

        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_top_icon"/>

    <View
        android:id="@+id/shimmer_bottom_info"
        android:layout_width="250dp"
        android:layout_height="@dimen/line_height"
        style="@style/shimmer_item"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/shimmer_bottom_icon"
        app:layout_constraintTop_toTopOf="@+id/shimmer_bottom_icon"
    />

    <View
        android:id="@+id/shimmer_bottom_subinfo"
        android:layout_width="150dp"
        android:layout_height="@dimen/line_height"
        style="@style/shimmer_item"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/shimmer_bottom_icon"
        app:layout_constraintBottom_toBottomOf="@+id/shimmer_bottom_icon"/>

    <View
        android:layout_width="36dp"
        android:layout_height="36dp"

        android:background="@drawable/shimmer_rect"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>