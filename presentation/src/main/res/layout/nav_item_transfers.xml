<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/nav_item"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
            android:id="@+id/imgRequests"
            android:layout_width="@dimen/nav_icons_size"
            android:layout_height="@dimen/nav_icons_size"
            android:layout_marginStart="@dimen/nav_icons_margin_start_end"
            android:layout_marginEnd="@dimen/nav_icons_margin_start_end"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_menu_route"/>

    <TextView
            android:id="@+id/title"
            style="@style/nav_item_title"
            android:text="@string/LNG_MENU_TITLE_TRANSFERS"
            android:layout_toEndOf="@+id/imgRequests"
            android:layout_marginEnd="5dp"/>

    <TextView
            android:id="@+id/tvEventsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            tools:text="5"
            android:background="@drawable/bg_circle_red"
            android:layout_toEndOf="@+id/title"
            android:gravity="center"
            android:visibility="gone"/>

    <TextView
            style="@style/nav_item_subtitle"
            android:text="@string/LNG_MENU_SUBTITLE_TRANSFERS"
            android:layout_below="@+id/title"
            android:layout_toEndOf="@+id/imgRequests"/>
</RelativeLayout>