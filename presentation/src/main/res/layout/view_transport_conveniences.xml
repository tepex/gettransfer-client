<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:paddingEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.kg.gettransfer.presentation.ui.custom.TransferDetailsField
            android:id="@+id/conveniences_field"
            tools:title_transfer_details="Business class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:id="@+id/conveniences_items"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
                android:id="@+id/carColor"
                android:layout_width="@dimen/view_transfer_details_about_transport_car_color_image_size"
                android:layout_height="@dimen/view_transfer_details_about_transport_car_color_image_size"
                android:layout_marginStart="@dimen/activity_transfer_details_margin_start_end_16dp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_circle_car_color_indicator"
                android:background="@drawable/border_car_color_indicator"

                tools:visibility="visible"/>

        <ImageView
                android:id="@+id/imgFreeWiFi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_transfer_details_margin_start_end_16dp"
                app:srcCompat="@drawable/ic_wifi"
                android:visibility="visible"

                tools:visibility="visible"/>

        <ImageView
                android:id="@+id/imgCharge"
                android:layout_width="22dp"
                android:layout_height="24dp"
                android:layout_marginStart="@dimen/activity_transfer_details_margin_start_end_16dp"
                app:srcCompat="@drawable/ic_charge"
                android:visibility="gone"

                tools:visibility="visible"/>

        <ImageView
                android:id="@+id/imgFreeWater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_transfer_details_margin_start_end_16dp"
                app:srcCompat="@drawable/ic_free_water"
                android:visibility="gone"

                tools:visibility="visible"/>


    </LinearLayout>

</RelativeLayout>