<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="@dimen/search_item_height"
	android:background="?android:attr/selectableItemBackground"
	android:orientation="horizontal">
	<ImageView
		android:src="@drawable/ic_location"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/address_item_icon_margin_default"
		android:layout_gravity="center_vertical"/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/address_item_horizontal_margin"
		android:layout_marginEnd="@dimen/address_item_horizontal_margin"
		android:paddingTop="@dimen/address_item_padding"
		android:paddingBottom="@dimen/address_item_padding"
		android:orientation="vertical">
		<TextView android:id="@+id/addressItem"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:lines="1"
			android:ellipsize="end"
			style="@style/address_item" />
		<TextView android:id="@+id/addressSecondaryItem"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:lines="1"
			android:ellipsize="end"
			style="@style/address_secondary_item" />
	</LinearLayout>


</LinearLayout>
