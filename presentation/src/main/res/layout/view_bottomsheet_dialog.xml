<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/back_top_rounded"
    android:padding="@dimen/rate_container_dialog_padding"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/bottomSheetDialogCloseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_x"
        android:layout_gravity="end"/>

    <ImageView
        android:id="@+id/bottomSheetDialogImage"
        android:layout_width="160dp"
        android:layout_height="106dp"
        android:src="@drawable/ic_invalid_credentials"/>

    <TextView
        android:id="@+id/bottomSheetDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:textColor="@color/colorTextBlack"
        android:fontFamily="@font/sf_pro_text_semibold"
        android:textSize="17sp"
        android:text="@string/LNG_ERROR_CREDENTIALS"/>

    <TextView
        android:id="@+id/bottomSheetDialogDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="56dp"
        android:textColor="@color/color_transfer_details_text_gray"
        android:fontFamily="@font/sf_pro_text_semibold"
        android:textSize="17sp"
        android:gravity="center"
        android:text="@string/LNG_ERROR_EMAIL_PHONE"/>

    <Button
        android:id="@+id/bottomSheetDialogOkButton"
        android:layout_width="320dp"
        android:layout_height="44dp"
        android:layout_marginTop="48dp"
        android:text="@string/LNG_OK"
        android:textSize="12sp"
        android:fontFamily="@font/sf_pro_text_semibold"
        android:background="@drawable/btn_bg_rounded_green"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/bottomSheetDialogCancelButton"
        android:layout_width="320dp"
        android:layout_height="44dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp"
        android:text="@string/LNG_CANCEL"
        android:gravity="center"
        android:fontFamily="@font/sf_pro_text_regular"
        android:textSize="12sp"
        android:textColor="@color/colorTextBlack" />

</LinearLayout>