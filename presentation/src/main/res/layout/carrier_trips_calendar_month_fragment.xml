<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/monthAndYear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/carrier_trips_month_fragment_month_text_view_height"
        android:gravity="center"
        android:textSize="@dimen/carrier_trips_month_fragment_month_name_size"
        android:fontFamily="@font/sf_pro_text_regular"
        android:textColor="@color/colorWhite"
        android:background="@color/primaryDriver"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/viewGradient"
        android:layout_width="match_parent"
        android:layout_height="@dimen/carrier_trips_calendar_fragment_gradient_height"
        app:layout_constraintTop_toBottomOf="@+id/monthAndYear"
        android:background="@drawable/back_calendar_tint_gradient" />

    <LinearLayout
        android:id="@+id/layoutDaysOfWeek"
        android:layout_width="match_parent"
        android:layout_height="@dimen/carrier_trips_month_fragment_days_of_week_height"
        app:layout_constraintTop_toBottomOf="@+id/monthAndYear"
        android:orientation="horizontal"
        android:gravity="center"/>

    <GridView
        android:id="@+id/gridViewCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/layoutDaysOfWeek"
        android:numColumns="7"/>

</android.support.constraint.ConstraintLayout>