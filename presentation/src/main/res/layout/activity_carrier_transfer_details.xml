<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>

    <ScrollView
        android:id="@+id/svTransfer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.gms.maps.MapView
                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/create_transfer_map_height" />

                <ImageView
                    android:id="@+id/transparentImage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/create_transfer_map_height"
                    android:src="@null" />

            </RelativeLayout>

            <include
                android:id="@+id/layoutTransferInfo"
                layout="@layout/view_transfer_request_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_carrier_transfer_details_btns_layout_height"
                android:paddingTop="@dimen/activity_carrier_transfer_details_btns_layout_padding_top_bottom"
                android:paddingBottom="@dimen/activity_carrier_transfer_details_btns_layout_padding_top_bottom"
                android:paddingStart="@dimen/activity_carrier_transfer_details_btns_layout_padding_start_end"
                android:paddingEnd="@dimen/activity_carrier_transfer_details_btns_layout_padding_start_end"
                android:orientation="horizontal">
                
                <include
                    layout="@layout/btn_layout_call_passenger"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/activity_carrier_transfer_details_btns_margin"
                    />

                <include
                    layout="@layout/btn_layout_chat_passenger"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/activity_carrier_transfer_details_btns_margin"/>
                
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_carrier_transfer_details_header_text_field_height"
                android:text="@string/transfer_details"
                android:textAllCaps="true"
                android:textColor="@color/colorTextLightGray"
                android:textSize="@dimen/activity_carrier_transfer_details_header_text_size"
                android:fontFamily="@font/sf_pro_text_bold"
                android:gravity="center_vertical"
                android:background="@color/colorBack"
                android:paddingStart="@dimen/activity_carrier_transfer_details_header_text_padding_start_end"
                android:paddingEnd="@dimen/activity_carrier_transfer_details_header_text_padding_start_end"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:background="@color/colorDividerGray" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_carrier_transfer_details_info_field_height">
                
                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_person"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/textPassenger"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                
                <TextView
                    android:id="@+id/textPassenger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/activity_carrier_transfer_details_info_text_size"
                    android:textColor="@color/colorTextBlack"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:text="@string/passengers"
                    android:layout_marginStart="@dimen/activity_carrier_transfer_details_info_text_margin_start"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/tvCountPassengers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="@dimen/activity_carrier_transfer_details_info_text_size"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:textColor="@color/colorTextLightGray"
                    android:gravity="end"
                    android:layout_marginEnd="@dimen/activity_carrier_transfer_details_editable_text_margin_end"
                    app:layout_constraintStart_toEndOf="@id/textPassenger"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </android.support.constraint.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:background="@color/colorDividerGray"
                android:layout_marginStart="@dimen/activity_carrier_transfer_details_info_text_margin_start"/>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_carrier_transfer_details_info_field_height">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_passport"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/textName"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/textName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/activity_carrier_transfer_details_info_text_size"
                    android:textColor="@color/colorTextBlack"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:text="@string/name"
                    android:layout_marginStart="@dimen/activity_carrier_transfer_details_info_text_margin_start"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/tvPassengerName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Christopher Burret"
                    android:textSize="@dimen/activity_carrier_transfer_details_info_text_size"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:textColor="@color/colorTextLightGray"
                    android:gravity="end"
                    android:layout_marginEnd="@dimen/activity_carrier_transfer_details_editable_text_margin_end"
                    app:layout_constraintStart_toEndOf="@id/textName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </android.support.constraint.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:background="@color/colorDividerGray"
                android:layout_marginStart="@dimen/activity_carrier_transfer_details_info_text_margin_start"/>

