<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gtr_super_light_grey"
    android:clickable="true"
    android:focusable="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?android:attr/actionBarSize" />
    </com.google.android.material.appbar.AppBarLayout>

    <com.kg.gettransfer.presentation.ui.custom.InputAccountFieldView
        android:id="@+id/emailLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:account_field_view_icon="@drawable/ic_email"
        app:account_field_view_hint="@string/LNG_ENTER_NEW_EMAIL"
        app:account_field_view_divider_visible="false"
        android:inputType="textEmailAddress"
        android:paddingStart="@dimen/change_email_field_vertical_padding"
        android:paddingEnd="@dimen/change_email_field_vertical_padding"
        android:background="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@+id/appbar"/>

    <com.kg.gettransfer.presentation.ui.custom.ActivationCodeView
        android:id="@+id/activationCodeView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/emailLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnChangeEmail"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="@dimen/general_button_height"
        android:layout_marginStart="@dimen/change_email_bth_change_email_margins"
        android:layout_marginEnd="@dimen/change_email_bth_change_email_margins"
        android:layout_marginBottom="@dimen/change_email_bth_change_email_margins"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/btn_bg_rounded_green"
        android:enabled="false"
        android:text="@string/LNG_CHANGE_EMAIL"
        android:textColor="@color/colorWhite" />

</androidx.constraintlayout.widget.ConstraintLayout>