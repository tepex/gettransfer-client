<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="@dimen/rate_your_transfer_height">

    <com.willy.ratingbar.ScaleRatingBar
        android:id="@+id/tripRate"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:paddingTop="32dp"

        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srb_clearRatingEnabled="false"
        app:srb_drawableEmpty="@drawable/ic_star_empty"
        app:srb_drawableFilled="@drawable/ic_star_filled"
        app:srb_minimumStars="@integer/stars_minimum"
        app:srb_numStars="@integer/stars_number"
        app:srb_rating="@integer/default_stars_num"
        app:srb_scrollable="false"
        app:srb_starHeight="@dimen/rating_bar_stars_enabled_height"
        app:srb_starPadding="@dimen/rating_bar_stars_padding"
        app:srb_starWidth="@dimen/rating_bar_stars_enabled_width"
        app:srb_stepSize="1" />

    <TextView
        android:id="@+id/textView"
        style="@style/transfer_details_main_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/LNG_RIDE_YOU_HAPPY_TRANSFER"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tripRate" />

</android.support.constraint.ConstraintLayout>