<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back_rounded"
    android:orientation="vertical"
    android:padding="@dimen/rate_container_dialog_padding">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/launcher_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        style="@style/sf_font_bold"
        android:textSize="@dimen/thanks_forRate_text_size"
        android:text="@string/LNG_ENJOING_GTR" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        style="@style/sf_font"
        android:textColor="@color/black_a30"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:gravity="center_horizontal"
        android:textSize="@dimen/thanks_forRate_text_size"
        android:text="@string/LNG_REVIEW_REQUEST_ANDROID" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="56dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_reject_store"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_rounded_disable"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:gravity="center"
            android:textSize="17sp"
            style="@style/sf_font"
            android:textColor="@color/colorTextBlack"
            android:text="@string/LNG_REVIEW_REQUEST_LATER" />

        <TextView
            android:id="@+id/tv_agree_store"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_rounded_enable"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:gravity="center"
            style="@style/sf_font"
            android:textSize="17sp"
            android:textColor="@color/colorWhite"
            android:text="@string/LNG_REVIEW_REQUEST_CONTINUE" />


    </LinearLayout>


</LinearLayout>