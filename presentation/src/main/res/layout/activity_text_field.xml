<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="280dp"
	android:fitsSystemWindows="true"
	android:clipToPadding="false"
	android:paddingTop="32dp"
	android:paddingBottom="32dp"
	android:background="@drawable/back_top_rounded">

	<android.support.v7.widget.AppCompatEditText
		android:id="@+id/etPopupComment"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:minHeight="216dp"
		android:background="@android:color/transparent"
		android:fontFamily="@font/sf_pro_text_regular"
		android:gravity="top"
		android:hint="@string/LNG_COMMENT_PLACEHOLDER"
		android:imeOptions="actionDone"
		android:inputType="textMultiLine"
		android:paddingStart="32dp"
		android:paddingEnd="32dp"
		android:includeFontPadding="false"
		android:textColor="@color/colorTextBlack"
		android:textColorHint="@color/colorTextLightGray"
		android:textCursorDrawable="@drawable/sh_et_cursor"
		android:textSize="@dimen/create_transfer_additionals_top_text_size">
		<requestFocus/>
	</android.support.v7.widget.AppCompatEditText>

</ScrollView>