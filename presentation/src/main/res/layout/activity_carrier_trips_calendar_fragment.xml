<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackgroundGray">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"

                android:layout_height="@dimen/carrier_trips_calendar_fragment_view_pager_height"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/colorWhite"/>

            <View
                android:id="@+id/viewGradient"
                android:layout_width="match_parent"
                android:layout_height="@dimen/carrier_trips_calendar_fragment_gradient_height"
                android:background="@drawable/back_calendar_tint_gradient"
                app:layout_constraintTop_toBottomOf="@+id/viewPager"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCarrierTrips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/viewPager"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/carrier_trips_calendar_fragment_rv_margin_top"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/textNoTrips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/colorTextBlack"
        android:textAllCaps="true"
        android:fontFamily="@font/sf_pro_text_semibold"
        android:text="@string/LNG_HAVE_NO_TRIPS_TODAY"
        app:layout_constraintTop_toBottomOf="@+id/scrollView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>