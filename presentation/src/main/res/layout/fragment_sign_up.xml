<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:paddingTop="16dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/nameLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:theme="@style/editTextLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/loginNameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon"
            android:background="@null"
            android:drawableStart="@drawable/wrapped_ic_account_wrapper"
            android:drawablePadding="@dimen/login_input_layout_drawable_padding"
            android:ems="10"
            android:hint="Your full name"
            android:inputType="text"
            android:paddingTop="@dimen/login_etEmail_padding_top"
            android:paddingBottom="@dimen/login_etEmail_padding_bottom" />

        <requestFocus />
    </android.support.design.widget.TextInputLayout>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/create_transfer_divider_height"
        android:background="@color/create_order_fields_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameLayout" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/phoneLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:theme="@style/editTextLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider1">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/loginPhoneTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon"
            android:background="@null"
            android:drawableStart="@drawable/ic_phone"
            android:drawablePadding="@dimen/login_input_layout_drawable_padding"
            android:ems="10"
            android:hint="Your phone number"
            android:inputType="phone"
            android:paddingTop="@dimen/login_etEmail_padding_top"
            android:paddingBottom="@dimen/login_etEmail_padding_bottom" />

        <requestFocus />
    </android.support.design.widget.TextInputLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/create_transfer_divider_height"
        android:background="@color/create_order_fields_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneLayout" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/emailLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:theme="@style/editTextLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider2">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/loginEmailTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon"
            android:background="@null"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="@dimen/login_input_layout_drawable_padding"
            android:ems="10"
            android:hint="Your e-mail"
            android:inputType="textEmailAddress"
            android:paddingTop="@dimen/login_etEmail_padding_top"
            android:paddingBottom="@dimen/login_etEmail_padding_bottom" />

        <requestFocus />
    </android.support.design.widget.TextInputLayout>

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/create_transfer_divider_height"
        android:background="@color/create_order_fields_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailLayout" />

    <TextView
        android:id="@+id/licenseAgreementTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Я ознакомился и согласен с текстом Лицензионного соглашения"
        app:layout_constraintTop_toBottomOf="@+id/divider3"
        app:layout_constraintEnd_toStartOf="@+id/switchAgreementTb"
        app:layout_constraintStart_toStartOf="parent"/>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switchAgreementTb"
        android:layout_width="54dp"
        android:layout_height="34dp"
        android:theme="@style/SwitchCompatStyle"
        app:layout_constraintBottom_toBottomOf="@+id/licenseAgreementTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/licenseAgreementTv" />

    <Button
        android:id="@+id/btnLogin"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="@dimen/general_button_height"
        android:layout_marginTop="@dimen/login_btnLogin_margin_top"
        android:background="@drawable/btn_bg_rounded"
        android:enabled="false"
        android:text="Sign Up"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/licenseAgreementTv" />

</android.support.constraint.ConstraintLayout>