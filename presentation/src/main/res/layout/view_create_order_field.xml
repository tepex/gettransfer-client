<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="5dp"
    tools:context=".presentation.ui.custom.CreateOrderField">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:hintAnimationEnabled="false"
        tools:hint="450"
        android:theme="@style/editTextHintCreateOrder">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/field_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:background="@null"
            android:drawableStart="@drawable/wrapped_ic_comment"
            android:drawablePadding="8dp"
            android:ellipsize="end"
            android:gravity="start|center"
            android:imeOptions="actionNext"
            android:singleLine="true"
            style="@style/sf_font"/>
    </android.support.design.widget.TextInputLayout>

    <View
        android:id="@+id/field_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/create_transfer_divider_height"
        android:layout_marginTop="@dimen/divider_create_order_margin_top"
        android:background="@color/create_order_fields_divider" />

</LinearLayout>