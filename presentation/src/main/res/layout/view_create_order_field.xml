<?xml version="1.0" encoding="utf-8"?>
    <android.support.design.widget.TextInputLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/input_layout"
    android:layout_width="match_parent"
    android:paddingStart="@dimen/margin16"
    android:paddingTop="@dimen/margin4"
    android:paddingEnd="@dimen/margin16"
    android:paddingBottom="@dimen/divider_create_order_margin_top"
    android:layout_height="wrap_content"
        android:gravity="center"
        app:hintAnimationEnabled="false"
        tools:hint="450"
        android:theme="@style/editTextHintCreateOrder">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/field_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:background="@null"
            tools:drawableStart="@drawable/wrapped_ic_comment"
            android:drawablePadding="8dp"
            android:ellipsize="end"
            android:gravity="start|center"
            android:imeOptions="actionNext"
            android:singleLine="true"
            style="@style/sf_font"/>
    </android.support.design.widget.TextInputLayout>