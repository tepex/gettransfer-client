<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_drivers_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/colorTextBlack"
        android:textSize="@dimen/view_offer_rating_text_size"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="4,3"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imgStar"
        android:layout_width="@dimen/view_offer_rating_img_size"
        android:layout_height="@dimen/view_offer_rating_img_size"
        android:layout_marginStart="@dimen/view_offer_rating_margins"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/tv_drivers_rate"
        app:layout_constraintStart_toEndOf="@+id/tv_drivers_rate"
        app:layout_constraintTop_toTopOf="@+id/tv_drivers_rate"
        app:srcCompat="@drawable/ic_star_filled"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imgApproved"
        android:layout_width="@dimen/view_offer_rating_img_size"
        android:layout_height="@dimen/view_offer_rating_img_size"
        android:layout_marginStart="@dimen/view_offer_rating_margins"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_like_button"
        tools:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/imgStar"
        app:layout_constraintTop_toTopOf="@+id/imgStar"
        app:layout_constraintBottom_toBottomOf="@+id/imgStar"/>

</androidx.constraintlayout.widget.ConstraintLayout>