<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/ivOnboard"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/about_item_height"
        app:srcCompat="@drawable/onboarding_0" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/about_item_description_margin_top"
        android:layout_marginStart="@dimen/about_item_description_margin_start"
        android:layout_marginEnd="@dimen/about_item_description_margin_end"
        tools:text="@string/LNG_PRESENTATION_TITLE_0"
        style="@style/sf_font_semi_bold_17_sp"/>

</LinearLayout>