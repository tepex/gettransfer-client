<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/about_item1"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginTop="@dimen/about_item_top"
	android:background="#aaaaff"
	android:orientation="vertical"
	android:gravity="center_horizontal"
	tools:context=".presentation.ui.AboutActivity">

	<TextView android:id="@+id/title1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="about item 1" />
	
	<TextView android:id="@+id/content1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="content item 1"
		tools:text="@tools:sample/lorem" />
</LinearLayout>
