<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:gravity="center_vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


    <RelativeLayout
            android:id="@+id/rl_experience"
            android:background="@drawable/bg_rounded_yellow"
            android:visibility="gone"
            android:paddingStart="7dp"
            android:paddingEnd="7dp"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tv_years"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                style="@style/black_semiBold"
                tools:text="5"/>
        <TextView
                android:id="@+id/tv_number_suffix"
                android:layout_toEndOf="@+id/tv_years"
                style="@style/black_semiBold"
                android:textSize="9sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="yr"/>
    </RelativeLayout>


    <ImageView
            android:layout_width="24dp"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_licence"/>

    <ImageView
            android:layout_width="24dp"
            android:layout_height="16dp"
            android:layout_marginStart="11dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_driver_pin"/>
    <LinearLayout
            android:id="@+id/languages_container"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</LinearLayout>