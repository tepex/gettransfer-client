<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="@dimen/activity_chat_not_my_message_margin_end"
    android:layout_marginStart="@dimen/activity_chat_not_my_message_margin_start"
    android:layout_marginTop="@dimen/activity_chat_not_my_message_margin_top_bottom"
    android:layout_marginBottom="@dimen/activity_chat_not_my_message_margin_top_bottom">

    <TextView
        android:id="@+id/notMyMessageTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/activity_chat_message_item_date_text_size"
        android:textColor="@color/color_gtr_grey"
        android:fontFamily="@font/sf_pro_text_regular" />

    <TextView
        android:id="@+id/notMyMessageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_chat_item_not_my_message"
        android:textSize="@dimen/activity_chat_message_item_text_size"
        android:textColor="@color/color_gtr_black"
        android:fontFamily="@font/sf_pro_text_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notMyMessageTimeText"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/activity_chat_not_my_message_text_margin_top"
        android:paddingTop="@dimen/activity_chat_not_my_message_text_padding_top"
        android:paddingBottom="@dimen/activity_chat_not_my_message_text_padding_bottom"
        android:paddingEnd="@dimen/activity_chat_not_my_message_text_padding_start_end"
        android:paddingStart="@dimen/activity_chat_not_my_message_text_padding_start_end"/>

</androidx.constraintlayout.widget.ConstraintLayout>