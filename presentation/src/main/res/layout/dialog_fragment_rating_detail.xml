<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<android.support.constraint.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<android.support.v7.widget.AppCompatImageView
			android:id="@+id/appCompatImageView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="16dp"
			android:layout_marginTop="16dp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:srcCompat="@drawable/ic_close_x"
			android:background="?attr/selectableItemBackgroundBorderless"/>

		<com.willy.ratingbar.ScaleRatingBar
			android:id="@+id/main_rate"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_marginEnd="32dp"
			android:layout_marginStart="32dp"
			android:layout_marginTop="8dp"
			android:gravity="center_horizontal"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/appCompatImageView"
			app:srb_clickable="false"
			app:srb_drawableEmpty="@drawable/ic_star_empty"
			app:srb_drawableFilled="@drawable/ic_star_filled"
			app:srb_starHeight="@dimen/rating_bar_stars_enabled_height"
			app:srb_starWidth="@dimen/rating_bar_stars_enabled_width"
			app:srb_stepSize="0.5" />

		<TextView
			android:id="@+id/tvRateTitle"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginEnd="32dp"
			android:layout_marginStart="32dp"
			android:layout_marginTop="24dp"
			android:gravity="center"
			android:text="@string/LNG_PAYMENT_THANK_RATING"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/main_rate"
			style="@style/transfer_details_main_text" />

		<TextView
			android:id="@+id/tvRateDesc"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginEnd="32dp"
			android:layout_marginStart="32dp"
			android:layout_marginTop="16dp"
			android:gravity="center"
			android:text="@string/LNG_PAYMENT_SPECIFY_YOUR_RATING"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/tvRateTitle"
			style="@style/transfer_details_secondary_text" />


		<com.kg.gettransfer.presentation.ui.custom.RateField
			android:id="@+id/driver_rate"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginEnd="32dp"
			android:layout_marginStart="32dp"
			android:layout_marginTop="16dp"
			android:tag="@string/DRIVER"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/tvRateDesc"
			app:rate_sub_title="@string/LNG_PAYMENT_PROFFESSIONALISM"
			app:rate_title="@string/LNG_DRIVER" />

		<View
			android:id="@+id/dividerDriver"
			android:layout_width="match_parent"
			android:layout_height="0.5dp"
			android:layout_marginEnd="32dp"
			android:layout_marginStart="32dp"
			android:layout_marginTop="8dp"
			android:background="@color/color_transfer_details_horizontal_divider"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/driver_rate" />

		<com.kg.gettransfer.presentation.ui.custom.RateField
			android:id="@+id/punctuality_rate"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginEnd="32dp"
			android:layout_marginStart="32dp"
			android:layout_marginTop="16dp"
			android:tag="@string/PUNCTUALITY"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/dividerDriver"
			app:rate_sub_title="@string/LNG_PAYMENT_ARRIVAL_TIME"
			app:rate_title="@string/LNG_PAYMENT_PUNCTUALITY" />

		<View
			android:id="@+id/dividerPunctuality"
			android:layout_width="match_parent"
			android:layout_height="0.5dp"
			android:layout_marginEnd="32dp"
			android:layout_marginStart="32dp"
			android:layout_marginTop="8dp"
			android:background="@color/color_transfer_details_horizontal_divider"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/punctuality_rate" />

		<com.kg.gettransfer.presentation.ui.custom.RateField
			android:id="@+id/vehicle_rate"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginEnd="32dp"
			android:layout_marginStart="32dp"
			android:layout_marginTop="16dp"
			android:tag="@string/VEHICLE"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/dividerPunctuality"
			app:rate_sub_title="@string/LNG_PAYMENT_CAR_CONDITIONAL"
			app:rate_title="@string/LNG_VEHICLE_RATING" />

		<TextView
			android:id="@+id/tvCommentTitle"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginEnd="32dp"
			android:layout_marginStart="32dp"
			android:layout_marginTop="32dp"
			android:gravity="center"
			android:text="@string/LNG_PAYMENT_LEAVE_COMMENT"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/vehicle_rate"
			style="@style/transfer_details_main_text" />

		<TextView
			android:id="@+id/tvYourComment"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginEnd="32dp"
			android:layout_marginStart="32dp"
			android:layout_marginTop="8dp"
			android:drawableBottom="@drawable/sh_divider_gray_1dp"
			android:drawableEnd="@drawable/ic_arrow_right"
			android:drawablePadding="24dp"
			android:paddingTop="16dp"
			android:text="@string/LNG_PAYMENT_YOUR_COMMENT"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/tvCommentTitle"
			style="@style/transfer_details_secondary_text" />

		<android.support.design.button.MaterialButton
			android:id="@+id/btnSend"
			android:layout_width="match_parent"
			android:layout_height="56dp"
			android:layout_marginBottom="16dp"
			android:layout_marginEnd="32dp"
			android:layout_marginStart="32dp"
			android:layout_marginTop="16dp"
			android:fontFamily="@font/sf_pro_text_regular"
			android:text="@string/LNG_SEND"
			android:textColor="@color/colorWhite"
			android:textSize="14sp"
			app:backgroundTint="@color/color_gtr_green"
			app:cornerRadius="22dp"
			app:icon="@drawable/ic_check_circle"
			app:iconGravity="textStart"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/tvYourComment" />

	</android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>