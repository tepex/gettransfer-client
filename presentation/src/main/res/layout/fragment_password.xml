<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:background="@color/colorWhite">

    <android.support.constraint.Guideline
        android:id="@+id/guide_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/login_layout_constraintGuide_begin" />

    <android.support.constraint.Guideline
        android:id="@+id/guide_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/login_layout_constraintGuide_end" />


    <ImageView
        android:id="@+id/iv_login_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"

        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@mipmap/launcher_icon"/>

    <TextView
        android:id="@+id/currentUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/iv_login_icon"
        app:layout_constraintEnd_toEndOf="@id/iv_login_icon"
        app:layout_constraintStart_toStartOf="@id/iv_login_icon"

        style="@style/black_semiBold"

        tools:text="example@mail.com"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/passwordLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:theme="@style/editTextLogin"
        app:layout_constraintEnd_toStartOf="@+id/ivPasswordToggle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentUser">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableStart="@drawable/wrapped_ic_lock_black"
            android:drawablePadding="@dimen/login_input_layout_drawable_padding"
            android:ems="10"
            android:hint="@string/LNG_LOGIN_PASSWORD"
            android:inputType="textPassword"
            android:paddingStart="@dimen/login_etPassword_padding_start"
            android:paddingTop="@dimen/login_etPassword_padding_top"
            android:paddingEnd="@dimen/login_etPassword_padding_end"
            android:paddingBottom="@dimen/login_etPassword_padding_bottom" />

    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/ivPasswordToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_password_toggle__margin_top"
        app:srcCompat="@drawable/ic_eye_off_inactive"
        app:layout_constraintBottom_toTopOf="@+id/divider2"
        app:layout_constraintEnd_toStartOf="@+id/guide_right"
        app:layout_constraintTop_toTopOf="@+id/passwordLayout" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/create_transfer_divider_height"
        android:layout_marginStart="@dimen/divider_margin_start"
        android:layout_marginEnd="@dimen/divider_margin_end"
        android:background="@color/create_order_fields_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordLayout" />


    <Button
        android:id="@+id/btnLogin"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="@dimen/general_button_height"
        android:layout_marginStart="@dimen/login_btnLogin_margin_start"
        android:layout_marginTop="@dimen/login_btnLogin_margin_top"
        android:layout_marginEnd="@dimen/login_btnLogin_margin_end"
        android:background="@drawable/btn_bg_rounded"
        android:enabled="false"
        android:text="@string/LNG_LOGIN_BUTTON"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordLayout" />

    <TextView
        android:id="@+id/tvForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/login_forgot_password_margin_start"
        android:layout_marginTop="@dimen/login_forgot_password_margin_top"
        android:text="@string/LNG_LOGIN_FORGOT_PASSWORD"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="@+id/btnLogin"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin" />

    <TextView
        android:id="@+id/tvLoginError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/login_error_margin_start"
        android:layout_marginBottom="@dimen/login_error_margin_bottom"
        android:text="@string/LNG_BAD_CREDENTIALS_ERROR"
        android:textColor="@color/color_error"
        android:textSize="13sp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@id/guide_left"
        app:layout_constraintRight_toRightOf="@id/guide_right"
        app:layout_constraintTop_toBottomOf="@+id/tvForgotPassword"
        android:layout_marginTop="8dp"/>

</android.support.constraint.ConstraintLayout>
