<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/passwordLayout"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/bg_circle_yellow"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_account" />

            <TextView
                android:id="@+id/currentUser"
                style="@style/black_semiBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                tools:text="example@mail.com" />

        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/passwordLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="154dp"
            android:theme="@style/editTextLogin"
            app:layout_constraintEnd_toStartOf="@+id/ivPasswordToggle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableStart="@drawable/wrapped_ic_lock_black"
                android:drawablePadding="@dimen/login_input_layout_drawable_padding"
                android:ems="10"
                android:hint="@string/LNG_LOGIN_PASSWORD"
                android:inputType="textPassword"
                android:paddingTop="@dimen/login_etPassword_padding_top"
                android:paddingBottom="@dimen/login_etPassword_padding_bottom" >
                <requestFocus />
            </android.support.design.widget.TextInputEditText>

        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/ivPasswordToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_password_toggle__margin_top"
            app:layout_constraintBottom_toBottomOf="@+id/passwordLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/passwordLayout"
            app:srcCompat="@drawable/ic_eye_off_inactive" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/create_transfer_divider_height"
            android:background="@color/create_order_fields_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwordLayout" />

        <Button
            android:id="@+id/btnLogin"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="@dimen/general_button_height"
            android:layout_marginTop="@dimen/login_btnLogin_margin_top"
            android:background="@drawable/btn_bg_rounded"
            android:enabled="false"
            android:text="@string/LNG_LOGIN_BUTTON"
            android:textColor="@color/colorWhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwordLayout" />
        
        <TextView
            android:id="@+id/textOr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnLogin"
            android:layout_marginTop="8dp"
            style="@style/black_regular"
            android:textSize="17sp"
            android:text="@string/LNG_OR"/>

        <Button
            android:id="@+id/btnLoginByCode"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="@dimen/general_button_height"
            android:layout_marginTop="8dp"
            android:background="@drawable/btn_bg_rounded"
            android:enabled="true"
            android:text="@string/LNG_LOGIN_CODE"
            android:textColor="@color/colorWhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textOr" />

        <!--<TextView
            android:id="@+id/tvForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_forgot_password_margin_top"
            android:text="@string/LNG_LOGIN_FORGOT_PASSWORD"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="@+id/btnLogin"
            app:layout_constraintTop_toBottomOf="@+id/btnLogin" />-->

    </android.support.constraint.ConstraintLayout>

</FrameLayout>