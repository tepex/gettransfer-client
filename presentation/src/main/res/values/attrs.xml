<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="EditableView">
        <attr name="hint" format="string"/>
    </declare-styleable>

    <declare-styleable name="SearchAddress" parent="EditableView">
        <attr name="hint"/>
    </declare-styleable>

    <declare-styleable name="CreateOrderField" parent="EditableView">
        <attr name="title" format="string" />
        <attr name="hint"/>
        <attr name="icon_img" format="reference" />
        <attr name="isFocusable" format="boolean"/>
        <attr name="inputType" format="integer"/>
    </declare-styleable>

    <declare-styleable name="TransferDetailsField" parent="EditableView">
        <attr name="title_transfer_details" format="string" />
        <attr name="input_transfer_details" format="string"/>
    </declare-styleable>

    <declare-styleable name="AboutItem" parent="EditableView">
        <attr name="title_about_item" format="string" />
        <attr name="text_about_item" format="string" />
        <attr name="img_about_item" format="reference" />
    </declare-styleable>

    <declare-styleable name="IconWithNumberIndicator" parent="EditableField">
        <attr name="icon_with_number_indicator" format="reference" />
        <attr name="is_showing_number" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RateField">
        <attr name="rate_title" format="string"/>
        <attr name="rate_sub_title" format="string" />
    </declare-styleable>

    <declare-styleable name="TransferMainInfoView">
        <attr name="distance" format="string"/>
        <attr name="distance_title" format="string"/>
        <attr name="time" format="string"/>
        <attr name="time_title" format="string"/>
        <attr name="price" format="string"/>
        <attr name="price_title" format="string"/>
    </declare-styleable>
    
    <declare-styleable name="SeatsView">
        <attr name="passenger_seats" format="string"/>
        <attr name="child_seats" format="string"/>
    </declare-styleable>

</resources>
