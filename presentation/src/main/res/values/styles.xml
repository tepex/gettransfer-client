<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="colorPrimaryDark" tools:targetApi="23">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>-->
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="android:windowDisablePreview">true</item>
		<item name="android:windowContentTransitions">true</item>
	</style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
	
	<style name="sf_font">
		<item name="android:textColor">@android:color/black</item>
		<item name="android:fontFamily">@font/sf_pro_text_regular</item>
	</style>
	<style name="sf_font_bold">
		<item name="android:textColor">@android:color/black</item>
		<item name="android:fontFamily">@font/sf_pro_text_bold</item>
	</style>
	
	<style name="nav_item">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginTop">@dimen/nav_item_margin_top</item>
		<item name="android:layout_marginStart">@dimen/nav_item_margin_start</item>
		<item name="android:layout_marginBottom">@dimen/nav_item_margin_bottom</item>
		<item name="android:orientation">vertical</item>
	</style>
	<style name="nav_item_title" parent="sf_font">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">@dimen/nav_item_title_size</item>
	</style>
	<style name="nav_item_subtitle" parent="sf_font">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">@dimen/nav_item_subtitle_size</item>
		<item name="android:textColor">@color/nav_item_subtitle</item>
	</style>
	<style name="nav_footer_version" parent="sf_font">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">@dimen/nav_footer_version_size</item>
		<item name="android:textColor">@color/nav_item_subtitle</item>
	</style>

	<style name="about_title" parent="sf_font_bold">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">@dimen/about_title_size</item>
		<item name="android:textAllCaps">true</item>
	</style>

	<style name="about_content" parent="sf_font">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginTop">@dimen/about_content_top</item>
		<item name="android:paddingStart">@dimen/about_content_padding</item>
		<item name="android:paddingEnd">@dimen/about_content_padding</item>
		<item name="android:textSize">@dimen/about_content_size</item>
		<item name="android:textAlignment">center</item>
	</style>

	<style name="ReadMoreDialog" parent="Theme.AppCompat.Light.Dialog">
		<item name="windowFixedWidthMajor">95%</item>
		<item name="windowFixedWidthMinor">95%</item>
		<item name="android:windowTitleStyle">@style/read_more_title</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="android:fontFamily">@font/sf_pro_text_regular</item>
	</style>
	<style name="read_more_title" parent="sf_font_bold">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">@dimen/read_more_title_size</item>
	</style>

	<style name="read_more_item" parent="sf_font">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>







    <style name="etField">
        <item name="android:background">@android:color/transparent</item>

        <item name="android:paddingBottom">13dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">17dp</item>

        <item name="android:textSize">14sp</item>
    </style>

    <style name="line">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorBGSecondary</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

